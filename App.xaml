<Application x:Class="NexusAI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NexusAI"
             xmlns:converters="clr-namespace:NexusAI.Presentation.Converters"
             Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Premium 2026 Styles -->
                <ResourceDictionary Source="Resources/Styles.xaml"/>
                
                <!-- Centralized String Resources -->
                <ResourceDictionary Source="Resources/Strings.xaml"/>
                
                <!-- Converters -->
                <ResourceDictionary>
                    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
                    <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
                    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
                    <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
                    <converters:NullToVisibilityInverseConverter x:Key="NullToVisibilityInverseConverter"/>
                    <converters:ChatAlignmentConverter x:Key="ChatAlignmentConverter"/>
                    <converters:CitationClickableConverter x:Key="CitationClickableConverter"/>
                    <converters:ChatBubbleStyleConverter x:Key="ChatBubbleStyleConverter"/>
                    <converters:FileTypeIconConverter x:Key="FileTypeIconConverter"/>
                </ResourceDictionary>
                
                <!-- Empty State Converter -->
                <ResourceDictionary>
                    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
