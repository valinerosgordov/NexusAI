<Window x:Class="NexusAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Nexus AI" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0A"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        FontFamily="Segoe UI, SF Pro Display, -apple-system"
        TextElement.Foreground="#F5F5F7"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="ClearType">
    <Window.Resources>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideUp">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                             From="20" To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4"/>
        </Storyboard>
        <Style x:Key="ModernButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#8B5CF6"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="10"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                 To="1.02" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                 To="1.02" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                 To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                 To="1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SubtleButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#2C2C2E"/>
            <Setter Property="Foreground" Value="#F5F5F7"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform X="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1C1C1E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Foreground" Value="#98989D"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#F5F5F7"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                 To="1.15" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                 To="1.15" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                 To="1" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                 To="1" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <materialDesign:DialogHost Identifier="RootDialog">
        <Border Background="#0A0A0A" CornerRadius="12" BorderThickness="1" BorderBrush="#1C1C1E">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="#000000" 
                        CornerRadius="12,12,0,0"
                        BorderThickness="0,0,0,1"
                        BorderBrush="#1C1C1E"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid Height="64" Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Background="#8B5CF6" Width="36" Height="36" CornerRadius="8" Margin="0,0,12,0">
                                <materialDesign:PackIcon Kind="Brain" Width="20" Height="20" 
                                                         VerticalAlignment="Center" HorizontalAlignment="Center"
                                                         Foreground="White"/>
                            </Border>
                            <TextBlock Text="Nexus AI" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="#F5F5F7"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Background="#1C1C1E" 
                                    CornerRadius="10" Padding="12,8" Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CloudOutline" Width="20" Height="20" 
                                                         Margin="0,0,8,0" VerticalAlignment="Center"
                                                         Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Gemini}"/>
                                <materialDesign:PackIcon Kind="ServerNetwork" Width="20" Height="20" 
                                                         Margin="0,0,8,0" VerticalAlignment="Center"
                                                         Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Ollama}"/>
                                <ComboBox ItemsSource="{Binding Source={StaticResource AiProviderValues}}"
                                          SelectedItem="{Binding SelectedAiProvider}"
                                          MinWidth="120"
                                          Style="{StaticResource MaterialDesignFilledComboBox}"
                                          materialDesign:HintAssist.Hint="AI Provider"
                                          VerticalAlignment="Center"
                                          Margin="0,0,12,0"/>
                                <ComboBox ItemsSource="{Binding AvailableOllamaModels}"
                                          SelectedItem="{Binding SelectedOllamaModel}"
                                          MinWidth="140"
                                          Style="{StaticResource MaterialDesignFilledComboBox}"
                                          materialDesign:HintAssist.Hint="Model"
                                          VerticalAlignment="Center"
                                          Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Ollama}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                        Command="{Binding LoadOllamaModelsCommand}"
                                        ToolTip="Refresh Ollama models"
                                        Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Ollama}">
                                    <materialDesign:PackIcon Kind="Refresh"/>
                                </Button>
                            </StackPanel>
                        </Border>
                        <Border Background="#1C1C1E" 
                                CornerRadius="10" 
                                Padding="12,8" 
                                Margin="0,0,12,0"
                                Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Gemini}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Key" Width="20" Height="20" 
                                                         Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <PasswordBox x:Name="ApiKeyBox" 
                                             Width="240"
                                             materialDesign:HintAssist.Hint="Gemini API Key"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Style="{StaticResource MaterialDesignFilledPasswordBox}"
                                             PasswordChanged="ApiKeyBox_PasswordChanged"
                                             ToolTip="Get your API key from aistudio.google.com"/>
                            </StackPanel>
                        </Border>
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource IconButtonStyle}" 
                                        Click="MinimizeWindow" 
                                        Margin="0,0,8,0"
                                        ToolTip="Minimize">
                                    <materialDesign:PackIcon Kind="WindowMinimize" Width="16" Height="16"/>
                                </Button>
                                <Button Style="{StaticResource IconButtonStyle}" 
                                        Click="MaximizeWindow"
                                        Margin="0,0,8,0"
                                        ToolTip="Maximize">
                                    <materialDesign:PackIcon Kind="WindowMaximize" Width="16" Height="16"/>
                                </Button>
                                <Button Style="{StaticResource IconButtonStyle}" 
                                        Click="CloseWindow"
                                        ToolTip="Close">
                                    <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="360" MinWidth="320" MaxWidth="480"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*" MinWidth="300"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Border Background="#1C1C1E"
                            CornerRadius="12"
                            Margin="12,8,8,12"
                            AllowDrop="True"
                            Drop="Sidebar_Drop"
                            DragEnter="Sidebar_DragEnter"
                            DragLeave="Sidebar_DragLeave"
                            x:Name="SidebarBorder">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Margin="20,24,20,16">
                            <TextBlock Text="ðŸ“š Knowledge Base" 
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#F5F5F7"/>
                            <TextBlock Text="Drag &amp; drop files or click to add" 
                                       FontSize="12"
                                       Foreground="#98989D"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" 
                                        Visibility="{Binding Sources.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverted}">
                                <Border Width="96" Height="96" 
                                        CornerRadius="48"
                                        Background="#1C1C1E"
                                        BorderThickness="2"
                                        Margin="0,0,0,16"
                                        HorizontalAlignment="Center">
                                    <Border.BorderBrush>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#8B5CF6" Offset="0"/>
                                            <GradientStop Color="#A78BFA" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.BorderBrush>
                                    <materialDesign:PackIcon Kind="CloudUpload" Width="48" Height="48"
                                                             Foreground="#8B5CF6"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="No documents loaded" 
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Foreground="#F5F5F7"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Drag &amp; drop files or click ADD DOCUMENTS" 
                                           FontSize="12"
                                           Foreground="#98989D"
                                           HorizontalAlignment="Center" 
                                           Margin="0,6,0,0"
                                           TextAlignment="Center"
                                           MaxWidth="200"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                          Margin="16,0"
                                          Visibility="{Binding Sources.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                <ItemsControl ItemsSource="{Binding Sources}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#0D0D0D" 
                                                    CornerRadius="10" 
                                                    Padding="14"
                                                    Margin="0,0,0,10"
                                                    BorderThickness="1"
                                                    BorderBrush="#2C2C2E"
                                                    Cursor="Hand"
                                                    x:Name="DocumentCard">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background">
                                                                    <Setter.Value>
                                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                            <GradientStop Color="#1C1C1E" Offset="0"/>
                                                                            <GradientStop Color="#0D0D0D" Offset="1"/>
                                                                        </LinearGradientBrush>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Setter Property="BorderBrush" Value="#8B5CF6"/>
                                                                <Trigger.EnterActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                                                                                              To="-2,0,-2,10" 
                                                                                              Duration="0:0:0.15">
                                                                                <ThicknessAnimation.EasingFunction>
                                                                                    <CubicEase EasingMode="EaseOut"/>
                                                                                </ThicknessAnimation.EasingFunction>
                                                                            </ThicknessAnimation>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.EnterActions>
                                                                <Trigger.ExitActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                                                                                              To="0,0,0,10" 
                                                                                              Duration="0:0:0.15">
                                                                                <ThicknessAnimation.EasingFunction>
                                                                                    <CubicEase EasingMode="EaseOut"/>
                                                                                </ThicknessAnimation.EasingFunction>
                                                                            </ThicknessAnimation>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.ExitActions>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" 
                                                            Width="36" Height="36" 
                                                            CornerRadius="8"
                                                            Margin="0,0,12,0"
                                                            VerticalAlignment="Center">
                                                        <Border.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#A78BFA" Offset="0"/>
                                                                <GradientStop Color="#8B5CF6" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Border.Background>
                                                        <materialDesign:PackIcon Kind="{Binding Document.FilePath, Converter={StaticResource FileIconConverter}}"
                                                                                 Width="18" Height="18"
                                                                                 Foreground="White"
                                                                                 HorizontalAlignment="Center"
                                                                                 VerticalAlignment="Center"/>
                                                    </Border>
                                                    <CheckBox Grid.Column="1" 
                                                              IsChecked="{Binding IsIncluded}"
                                                              ToolTip="Include in context"
                                                              Margin="0,0,12,0"
                                                              VerticalAlignment="Center"/>
                                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}" 
                                                                   FontWeight="Medium"
                                                                   FontSize="13"
                                                                   Foreground="#F5F5F7"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding LoadedAtDisplay}" 
                                                                   FontSize="11"
                                                                   Foreground="#98989D"
                                                                   Margin="0,2,0,0"/>
                                                    </StackPanel>
                                                    <Button Grid.Column="3" 
                                                            Style="{StaticResource MaterialDesignIconButton}"
                                                            Width="32" Height="32"
                                                            Command="{Binding DataContext.RemoveSourceCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                            CommandParameter="{Binding}"
                                                            ToolTip="Remove document"
                                                            Foreground="#98989D">
                                                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                        <StackPanel Grid.Row="2" Margin="20,8,20,20">
                            <Expander Header="Obsidian Vault" Margin="0,0,0,12"
                                      materialDesign:ExpanderAssist.HorizontalHeaderPadding="12">
                                <StackPanel Margin="12,8">
                                    <TextBox Text="{Binding ObsidianVaultPath, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Vault Path"
                                             Style="{StaticResource MaterialDesignFilledTextBox}"
                                             Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding ObsidianSubfolder, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Subfolder (optional)"
                                             Style="{StaticResource MaterialDesignFilledTextBox}"
                                             Margin="0,0,0,12"/>
                                    <Button Content="SYNC VAULT" 
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Command="{Binding LoadObsidianVaultCommand}"
                                            HorizontalAlignment="Stretch"
                                            ToolTip="Load all .md notes from vault"/>
                                </StackPanel>
                            </Expander>
                            <Button Command="{Binding AddDocumentCommand}"
                                    Style="{StaticResource ModernButton}"
                                    HorizontalAlignment="Stretch">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#A78BFA" Offset="0"/>
                                        <GradientStop Color="#8B5CF6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="FileUpload" 
                                                             Width="18" Height="18" 
                                                             Margin="0,0,10,0"
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="ADD DOCUMENTS" 
                                               FontWeight="SemiBold"
                                               FontSize="13"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <ProgressBar IsIndeterminate="True"
                                         Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                                         Margin="0,12,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border x:Name="DragDropOverlay" 
                        Visibility="Collapsed" 
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Opacity="0.1"
                        BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Margin="8"
                        IsHitTestVisible="False">
                    <TextBlock Text="Drop files here" 
                               FontSize="24" FontWeight="Bold"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </Border>
            </Grid>
                <GridSplitter Grid.Column="1" Width="4" 
                              Background="{DynamicResource MaterialDesignDivider}"
                              HorizontalAlignment="Center"/>
                <Border Grid.Column="2" 
                        Background="#1C1C1E"
                        CornerRadius="12"
                        Margin="8,8,8,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" 
                                      Padding="32,24" x:Name="ChatScrollViewer">
                            <StackPanel>
                                <Border Background="#0D0D0D" 
                                        Padding="32" 
                                        Margin="0,0,0,24"
                                        CornerRadius="16"
                                        BorderThickness="1"
                                        BorderBrush="#2C2C2E"
                                        Visibility="{Binding ChatMessages.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverted}">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ‘‹ Welcome to Nexus AI" 
                                                   FontSize="22"
                                                   FontWeight="SemiBold"
                                                   Foreground="#F5F5F7"
                                                   Margin="0,0,0,12"/>
                                        <TextBlock Text="I'm your AI research assistant powered by Gemini 2.0 Flash. Load documents to start asking questions."
                                                   FontSize="14"
                                                   LineHeight="22"
                                                   TextWrapping="Wrap"
                                                   Foreground="#98989D"/>
                                    </StackPanel>
                                </Border>
                                <ItemsControl ItemsSource="{Binding ChatMessages}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Border Margin="120,0,0,16" 
                                                        Padding="20,16"
                                                        HorizontalAlignment="Right"
                                                        Background="#8B5CF6"
                                                        Visibility="{Binding IsUser, Converter={StaticResource BoolToVisibilityConverter}}"
                                                        CornerRadius="20,20,4,20">
                                                    <TextBlock Text="{Binding Content}" 
                                                               TextWrapping="Wrap"
                                                               FontSize="14"
                                                               LineHeight="22"
                                                               Foreground="#FFFFFF"/>
                                                </Border>
                                                <Border Margin="0,0,120,16" 
                                                        Padding="20,16"
                                                        HorizontalAlignment="Left"
                                                        Background="#0D0D0D"
                                                        BorderThickness="1"
                                                        BorderBrush="#2C2C2E"
                                                        Visibility="{Binding IsUser, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverted}"
                                                        CornerRadius="20,20,20,4">
                                                    <Border.ContextMenu>
                                                        <ContextMenu>
                                                            <MenuItem Header="Read Aloud" 
                                                                      Command="{Binding DataContext.PlayAudioCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                      CommandParameter="{Binding Content}">
                                                                <MenuItem.Icon>
                                                                    <materialDesign:PackIcon Kind="VolumeHigh"/>
                                                                </MenuItem.Icon>
                                                            </MenuItem>
                                                            <MenuItem Header="Copy" 
                                                                      Command="{Binding CopyCommand}">
                                                                <MenuItem.Icon>
                                                                    <materialDesign:PackIcon Kind="ContentCopy"/>
                                                                </MenuItem.Icon>
                                                            </MenuItem>
                                                        </ContextMenu>
                                                    </Border.ContextMenu>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Content}" 
                                                               TextWrapping="Wrap"
                                                               Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                                                    <ItemsControl ItemsSource="{Binding SourceCitations}"
                                                                  Margin="0,12,0,0"
                                                                  Visibility="{Binding SourceCitations, Converter={StaticResource NullToVisibilityConverter}}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <materialDesign:Chip Content="{Binding}" 
                                                                                     Margin="0,0,8,4"
                                                                                     IconBackground="{DynamicResource SecondaryHueMidBrush}"
                                                                                     IconForeground="White">
                                                                    <materialDesign:Chip.Icon>
                                                                        <materialDesign:PackIcon Kind="FileDocument"/>
                                                                    </materialDesign:Chip.Icon>
                                                                </materialDesign:Chip>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                                <StackPanel HorizontalAlignment="Left" 
                                            Visibility="{Binding IsThinking, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Margin="0,12">
                                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                 Width="40" Height="40"
                                                 IsIndeterminate="True"
                                                 Value="0"/>
                                    <TextBlock Text="Thinking..." 
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               HorizontalAlignment="Center"
                                               Margin="0,8,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                        <Border Grid.Row="1" 
                                Background="#0D0D0D"
                                Padding="24,16"
                                BorderBrush="#2C2C2E"
                                BorderThickness="0,1,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" 
                                        Padding="16,12"
                                        Background="#1C1C1E"
                                        CornerRadius="10"
                                        Margin="0,0,0,12"
                                        BorderThickness="1"
                                        BorderBrush="#2C2C2E"
                                        Visibility="{Binding IsPlayingAudio, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" 
                                                Background="#8B5CF6" 
                                                Width="32" Height="32" 
                                                CornerRadius="8"
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Center">
                                            <materialDesign:PackIcon Kind="VolumeHigh" 
                                                                     Width="16" Height="16"
                                                                     Foreground="White"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Grid.Column="1" 
                                                   Text="Playing audio..."
                                                   VerticalAlignment="Center"
                                                   FontSize="13"
                                                   Foreground="#F5F5F7"/>
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding PauseAudioCommand}"
                                                    Width="32" Height="32"
                                                    ToolTip="Pause"
                                                    Foreground="#98989D">
                                                <materialDesign:PackIcon Kind="Pause" Width="16" Height="16"/>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding StopAudioCommand}"
                                                    Width="32" Height="32"
                                                    ToolTip="Stop"
                                                    Foreground="#98989D">
                                                <materialDesign:PackIcon Kind="Stop" Width="16" Height="16"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" 
                                            Background="#1C1C1E"
                                            BorderThickness="1"
                                            BorderBrush="#2C2C2E"
                                            CornerRadius="12"
                                            Padding="16,12"
                                            Margin="0,0,12,0">
                                        <TextBox Text="{Binding UserQuestion, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Ask a question about your documents..."
                                                 materialDesign:HintAssist.Foreground="#98989D"
                                                 Style="{StaticResource MaterialDesignTextBox}"
                                                 AcceptsReturn="True"
                                                 TextWrapping="Wrap"
                                                 MaxHeight="120"
                                                 BorderThickness="0"
                                                 VerticalScrollBarVisibility="Auto"
                                                 FontSize="14"
                                                 Foreground="#F5F5F7"
                                                 AllowDrop="True"
                                                 Drop="ChatInput_Drop"/>
                                    </Border>
                                    <Button Grid.Column="1"
                                            Command="{Binding AskQuestionCommand}"
                                            Background="#8B5CF6"
                                            Foreground="White"
                                            Width="56" Height="56"
                                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                                            materialDesign:ButtonAssist.CornerRadius="12"
                                            ToolTip="Send message (Ctrl+Enter)">
                                        <materialDesign:PackIcon Kind="Send" Width="24" Height="24"/>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
                <GridSplitter Grid.Column="3" Width="4" 
                              Background="{DynamicResource MaterialDesignDivider}"
                              HorizontalAlignment="Center"/>
                <Border Grid.Column="4"
                        Background="#1C1C1E"
                        CornerRadius="12"
                        Margin="8,8,12,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" 
                                Background="#0D0D0D" 
                                Padding="6" 
                                Margin="16,16,16,16"
                                CornerRadius="12"
                                BorderThickness="1"
                                BorderBrush="#2C2C2E">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <RadioButton Grid.Column="0"
                                             Content="ðŸŽ¨ Artifacts" 
                                             Style="{StaticResource MaterialDesignTabRadioButton}"
                                             IsChecked="True"
                                             FontSize="13"
                                             FontWeight="SemiBold"
                                             Foreground="#F5F5F7"
                                             GroupName="RightPanelTabs"
                                             HorizontalAlignment="Stretch"
                                             HorizontalContentAlignment="Center"
                                             Padding="0,8"
                                             Click="ShowArtifactsTab"/>
                                
                                <RadioButton Grid.Column="1"
                                             Content="ðŸ•¸ï¸ Graph" 
                                             Style="{StaticResource MaterialDesignTabRadioButton}"
                                             FontSize="13"
                                             FontWeight="SemiBold"
                                             Foreground="#F5F5F7"
                                             GroupName="RightPanelTabs"
                                             HorizontalAlignment="Stretch"
                                             HorizontalContentAlignment="Center"
                                             Padding="0,8"
                                             Click="ShowGraphTab"/>
                            </Grid>
                        </Border>
                        <Grid x:Name="ArtifactsTabContent" Grid.Row="1" Margin="16,0,16,16" Visibility="Visible">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel VerticalAlignment="Top"
                                            Visibility="{Binding Artifacts.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverted}">
                                    
                                    <TextBlock Text="ðŸ“– RESEARCH" 
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="#8B5CF6"
                                               Margin="0,0,0,12"/>
                                    
                                    <Button Style="{StaticResource SubtleButton}"
                                            Command="{Binding GenerateDeepDiveCommand}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="BookOpenPageVariant" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Deep Dive" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Style="{StaticResource SubtleButton}"
                                            Command="{Binding GenerateSummaryCommand}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,20">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="TextBoxOutline" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Summary" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <TextBlock Text="ðŸ“š LEARNING" 
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="#8B5CF6"
                                               Margin="0,0,0,12"/>
                                    
                                    <Button Style="{StaticResource SubtleButton}"
                                            Command="{Binding GenerateNotebookGuideCommand}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="NotebookOutline" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Notebook Guide" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Style="{StaticResource SubtleButton}"
                                            Command="{Binding GenerateStudyGuideCommand}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="SchoolOutline" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Study Guide" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Style="{StaticResource SubtleButton}"
                                            Command="{Binding GenerateFaqCommand}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,20">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="HelpCircleOutline" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="FAQ" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <TextBlock Text="ðŸŽ™ï¸ CONTENT" 
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="#8B5CF6"
                                               Margin="0,0,0,12"/>
                                    
                                    <Button Style="{StaticResource SubtleButton}"
                                            Command="{Binding GeneratePodcastScriptCommand}"
                                            HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Microphone" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Podcast Script" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </ScrollViewer>
                            <Grid Visibility="{Binding Artifacts.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <ListBox Grid.Row="0" 
                                         ItemsSource="{Binding Artifacts}"
                                         SelectedItem="{Binding SelectedArtifact}"
                                         MaxHeight="200"
                                         Margin="0,0,0,12">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Title}" FontWeight="Medium"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                              Visibility="{Binding SelectedArtifact, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel>
                                        <Button Content="EXPORT TO OBSIDIAN"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Command="{Binding ExportArtifactToObsidianCommand}"
                                                HorizontalAlignment="Left"
                                                Margin="0,0,0,16"/>
                                        <TextBlock Text="{Binding SelectedArtifact.Title}"
                                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,12"/>
                                        <TextBlock Text="{Binding SelectedArtifact.Content}"
                                                   TextWrapping="Wrap"
                                                   Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Grid>
                        <Grid x:Name="GraphTabContent" Grid.Row="1" Margin="12" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Button Style="{StaticResource ModernButton}"
                                    Command="{Binding RefreshGraphCommand}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,12">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#A78BFA" Offset="0"/>
                                        <GradientStop Color="#8B5CF6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="GraphOutline" Width="18" Height="18" Margin="0,0,10,0"/>
                                    <TextBlock Text="REFRESH GRAPH" FontWeight="SemiBold" FontSize="13"/>
                                </StackPanel>
                            </Button>
                            <Border Grid.Row="1" 
                                    Background="#0D0D0D"
                                    BorderBrush="#2C2C2E"
                                    BorderThickness="1"
                                    CornerRadius="10">
                                <Canvas x:Name="GraphCanvas" Background="Transparent">
                                </Canvas>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
            </Grid>
        </Border>
    </materialDesign:DialogHost>
</Window>
