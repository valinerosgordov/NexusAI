<Window x:Class="NexusAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Nexus AI" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        Style="{StaticResource MaterialDesignWindow}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto">

    <Window.Resources>
        <!-- File Type Icon Mapping -->
        <Style x:Key="FileTypeIconTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Bar -->
            <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryDark" Padding="16,12" 
                                      materialDesign:ElevationAssist.Elevation="Dp4"
                                      MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo & Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Brain" Width="32" Height="32" 
                                                 Foreground="{DynamicResource SecondaryHueMidBrush}"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="NEXUS AI" FontSize="20" FontWeight="Bold" 
                                   Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- AI Provider & Settings -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- AI Provider Toggle -->
                        <Border Background="{DynamicResource MaterialDesignDivider}" 
                                CornerRadius="8" Padding="8" Margin="0,0,16,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CloudOutline" Width="20" Height="20" 
                                                         Margin="0,0,8,0" VerticalAlignment="Center"
                                                         Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Gemini}"/>
                                <materialDesign:PackIcon Kind="ServerNetwork" Width="20" Height="20" 
                                                         Margin="0,0,8,0" VerticalAlignment="Center"
                                                         Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Ollama}"/>
                                
                                <ComboBox ItemsSource="{Binding Source={StaticResource AiProviderValues}}"
                                          SelectedItem="{Binding SelectedAiProvider}"
                                          MinWidth="120"
                                          Style="{StaticResource MaterialDesignFilledComboBox}"
                                          materialDesign:HintAssist.Hint="AI Provider"
                                          VerticalAlignment="Center"
                                          Margin="0,0,12,0"/>
                                
                                <!-- Ollama Model Selector -->
                                <ComboBox ItemsSource="{Binding AvailableOllamaModels}"
                                          SelectedItem="{Binding SelectedOllamaModel}"
                                          MinWidth="140"
                                          Style="{StaticResource MaterialDesignFilledComboBox}"
                                          materialDesign:HintAssist.Hint="Model"
                                          VerticalAlignment="Center"
                                          Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Ollama}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                
                                <!-- Refresh Ollama Models Button -->
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                        Command="{Binding LoadOllamaModelsCommand}"
                                        ToolTip="Refresh Ollama models"
                                        Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Ollama}">
                                    <materialDesign:PackIcon Kind="Refresh"/>
                                </Button>
                            </StackPanel>
                        </Border>

                        <!-- Gemini API Key (only visible for Gemini) -->
                        <Border Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Gemini}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Key" Width="20" Height="20" 
                                                         Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <PasswordBox x:Name="ApiKeyBox" 
                                             Width="240"
                                             materialDesign:HintAssist.Hint="Gemini API Key"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Style="{StaticResource MaterialDesignFilledPasswordBox}"
                                             PasswordChanged="ApiKeyBox_PasswordChanged"
                                             ToolTip="Get your API key from aistudio.google.com"
                                             Margin="0,0,16,0"/>
                            </StackPanel>
                        </Border>
                        
                        <Button Style="{StaticResource MaterialDesignIconButton}" 
                                Click="MinimizeWindow" 
                                ToolTip="Minimize">
                            <materialDesign:PackIcon Kind="WindowMinimize"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}" 
                                Click="MaximizeWindow"
                                ToolTip="Maximize">
                            <materialDesign:PackIcon Kind="WindowMaximize"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}" 
                                Click="CloseWindow"
                                ToolTip="Close">
                            <materialDesign:PackIcon Kind="Close"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Main 3-Pane Layout -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="360" MinWidth="320" MaxWidth="480"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*" MinWidth="300"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT SIDEBAR: Documents/Sources -->
                <Border Grid.Column="0" Background="{DynamicResource MaterialDesignCardBackground}"
                        materialDesign:ElevationAssist.Elevation="Dp2"
                        Margin="8"
                        AllowDrop="True"
                        Drop="Sidebar_Drop"
                        DragEnter="Sidebar_DragEnter"
                        DragLeave="Sidebar_DragLeave"
                        x:Name="SidebarBorder">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Sidebar Header -->
                        <StackPanel Grid.Row="0" Margin="20,20,20,16">
                            <TextBlock Text="ðŸ“š Knowledge Base" 
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Drag &amp; drop files or click to add" 
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Documents List -->
                        <Grid Grid.Row="1">
                            <!-- Empty State -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" 
                                        Visibility="{Binding Sources.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverted}">
                                <materialDesign:PackIcon Kind="CloudUpload" Width="80" Height="80"
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                         Opacity="0.3"
                                                         HorizontalAlignment="Center"/>
                                <TextBlock Text="No documents loaded" 
                                           Style="{StaticResource MaterialDesignBody1TextBlock}"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                           HorizontalAlignment="Center" Margin="0,16,0,0"/>
                            </StackPanel>

                            <!-- Documents ScrollViewer -->
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                          Margin="12,0"
                                          Visibility="{Binding Sources.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                <ItemsControl ItemsSource="{Binding Sources}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <materialDesign:Card Margin="0,0,0,8" Padding="12"
                                                                 UniformCornerRadius="8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- File Icon based on extension -->
                                                    <materialDesign:PackIcon Grid.Column="0" 
                                                                             Kind="{Binding Document.FilePath, Converter={StaticResource FileIconConverter}}"
                                                                             Width="24" Height="24"
                                                                             Foreground="{DynamicResource SecondaryHueMidBrush}"
                                                                             Margin="0,0,12,0"
                                                                             VerticalAlignment="Center"/>

                                                    <!-- Checkbox -->
                                                    <CheckBox Grid.Column="1" 
                                                              IsChecked="{Binding IsIncluded}"
                                                              ToolTip="Include in context"
                                                              Margin="0,0,12,0"
                                                              VerticalAlignment="Center"/>

                                                    <!-- Document Name -->
                                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}" 
                                                                   FontWeight="Medium"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding LoadedAtDisplay}" 
                                                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                   FontSize="10"/>
                                                    </StackPanel>

                                                    <!-- Remove Button -->
                                                    <Button Grid.Column="3" 
                                                            Style="{StaticResource MaterialDesignIconButton}"
                                                            Command="{Binding DataContext.RemoveSourceCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                            CommandParameter="{Binding}"
                                                            ToolTip="Remove document">
                                                        <materialDesign:PackIcon Kind="Close"/>
                                                    </Button>
                                                </Grid>
                                            </materialDesign:Card>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>

                        <!-- Sidebar Actions -->
                        <StackPanel Grid.Row="2" Margin="20">
                            <!-- Obsidian Vault Section -->
                            <Expander Header="Obsidian Vault" Margin="0,0,0,12"
                                      materialDesign:ExpanderAssist.HorizontalHeaderPadding="12">
                                <StackPanel Margin="12,8">
                                    <TextBox Text="{Binding ObsidianVaultPath, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Vault Path"
                                             Style="{StaticResource MaterialDesignFilledTextBox}"
                                             Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding ObsidianSubfolder, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Subfolder (optional)"
                                             Style="{StaticResource MaterialDesignFilledTextBox}"
                                             Margin="0,0,0,12"/>
                                    <Button Content="SYNC VAULT" 
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Command="{Binding LoadObsidianVaultCommand}"
                                            HorizontalAlignment="Stretch"
                                            ToolTip="Load all .md notes from vault"/>
                                </StackPanel>
                            </Expander>

                            <!-- Add Document Button -->
                            <Button Content="ADD DOCUMENTS"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Command="{Binding AddDocumentCommand}"
                                    Height="48"
                                    HorizontalAlignment="Stretch"
                                    materialDesign:ButtonAssist.CornerRadius="8">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileUpload" 
                                                                 Width="20" Height="20" 
                                                                 Margin="0,0,8,0"/>
                                        <TextBlock Text="ADD DOCUMENTS" FontWeight="Bold"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <!-- Loading Indicator -->
                            <ProgressBar IsIndeterminate="True"
                                         Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                                         Margin="0,12,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Drag Overlay -->
                    <Border x:Name="DragDropOverlay" 
                            Visibility="Collapsed" 
                            Background="{DynamicResource PrimaryHueMidBrush}"
                            Opacity="0.1"
                            BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                            BorderThickness="2"
                            CornerRadius="8"
                            IsHitTestVisible="False">
                        <TextBlock Text="Drop files here" 
                                   FontSize="24" FontWeight="Bold"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    </Border>
                </Border>

                <!-- Splitter -->
                <GridSplitter Grid.Column="1" Width="4" 
                              Background="{DynamicResource MaterialDesignDivider}"
                              HorizontalAlignment="Center"/>

                <!-- CENTER: Chat Area -->
                <Border Grid.Column="2" 
                        Background="{DynamicResource MaterialDesignCardBackground}"
                        materialDesign:ElevationAssist.Elevation="Dp1"
                        Margin="4,8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Chat Messages -->
                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" 
                                      Padding="20" x:Name="ChatScrollViewer">
                            <StackPanel>
                                <!-- Welcome Message -->
                                <materialDesign:Card Padding="24" Margin="0,0,0,20"
                                                     materialDesign:ElevationAssist.Elevation="Dp0"
                                                     Background="{DynamicResource PrimaryHueLightBrush}"
                                                     Visibility="{Binding ChatMessages.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverted}">
                                    <StackPanel>
                                        <TextBlock Text="ðŸ‘‹ Welcome to Nexus AI" 
                                                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                                   FontWeight="Bold" Margin="0,0,0,8"/>
                                        <TextBlock Text="I'm your AI research assistant powered by Gemini 2.0 Flash. Load documents to start asking questions."
                                                   Style="{StaticResource MaterialDesignBody1TextBlock}"
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Chat Messages -->
                                <ItemsControl ItemsSource="{Binding ChatMessages}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!-- User Message (Right) -->
                                            <materialDesign:Card Margin="100,0,0,12" Padding="16"
                                                                 HorizontalAlignment="Right"
                                                                 Background="{DynamicResource PrimaryHueMidBrush}"
                                                                 Visibility="{Binding IsUser, Converter={StaticResource BoolToVisibilityConverter}}"
                                                                 UniformCornerRadius="12">
                                                <TextBlock Text="{Binding Content}" 
                                                           TextWrapping="Wrap"
                                                           Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                                            </materialDesign:Card>

                                            <!-- AI Message (Left) -->
                                            <materialDesign:Card Margin="0,0,100,12" Padding="16"
                                                                 HorizontalAlignment="Left"
                                                                 materialDesign:ElevationAssist.Elevation="Dp2"
                                                                 Visibility="{Binding IsUser, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverted}"
                                                                 UniformCornerRadius="12">
                                                <materialDesign:Card.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Header="Read Aloud" 
                                                                  Command="{Binding DataContext.PlayAudioCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                  CommandParameter="{Binding Content}">
                                                            <MenuItem.Icon>
                                                                <materialDesign:PackIcon Kind="VolumeHigh"/>
                                                            </MenuItem.Icon>
                                                        </MenuItem>
                                                        <MenuItem Header="Copy" 
                                                                  Command="{Binding CopyCommand}">
                                                            <MenuItem.Icon>
                                                                <materialDesign:PackIcon Kind="ContentCopy"/>
                                                            </MenuItem.Icon>
                                                        </MenuItem>
                                                    </ContextMenu>
                                                </materialDesign:Card.ContextMenu>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Content}" 
                                                               TextWrapping="Wrap"
                                                               Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                                                    
                                                    <!-- Citations -->
                                                    <ItemsControl ItemsSource="{Binding SourceCitations}"
                                                                  Margin="0,12,0,0"
                                                                  Visibility="{Binding SourceCitations, Converter={StaticResource NullToVisibilityConverter}}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <materialDesign:Chip Content="{Binding}" 
                                                                                     Margin="0,0,8,4"
                                                                                     IconBackground="{DynamicResource SecondaryHueMidBrush}"
                                                                                     IconForeground="White">
                                                                    <materialDesign:Chip.Icon>
                                                                        <materialDesign:PackIcon Kind="FileDocument"/>
                                                                    </materialDesign:Chip.Icon>
                                                                </materialDesign:Chip>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </materialDesign:Card>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Thinking Indicator -->
                                <StackPanel HorizontalAlignment="Left" 
                                            Visibility="{Binding IsThinking, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Margin="0,12">
                                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                 Width="40" Height="40"
                                                 IsIndeterminate="True"
                                                 Value="0"/>
                                    <TextBlock Text="Thinking..." 
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               HorizontalAlignment="Center"
                                               Margin="0,8,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Input Area -->
                        <Border Grid.Row="1" 
                                Background="{DynamicResource MaterialDesignCardBackground}"
                                Padding="20,12"
                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                BorderThickness="0,1,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Audio Controls (when playing) -->
                                <Border Grid.Row="0" 
                                        Padding="12,8"
                                        Background="{DynamicResource PrimaryHueLightBrush}"
                                        CornerRadius="8"
                                        Margin="0,0,0,8"
                                        Visibility="{Binding IsPlayingAudio, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon Grid.Column="0" 
                                                                 Kind="VolumeHigh" 
                                                                 Width="24" Height="24"
                                                                 VerticalAlignment="Center"
                                                                 Margin="0,0,12,0"/>

                                        <TextBlock Grid.Column="1" 
                                                   Text="Playing audio..."
                                                   VerticalAlignment="Center"
                                                   Style="{StaticResource MaterialDesignBody2TextBlock}"/>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding PauseAudioCommand}"
                                                    ToolTip="Pause">
                                                <materialDesign:PackIcon Kind="Pause"/>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding StopAudioCommand}"
                                                    ToolTip="Stop">
                                                <materialDesign:PackIcon Kind="Stop"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Input Controls -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                             Text="{Binding UserQuestion, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Ask a question about your documents..."
                                             Style="{StaticResource MaterialDesignFilledTextBox}"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             MaxHeight="120"
                                             VerticalScrollBarVisibility="Auto"
                                             Margin="0,0,12,0"
                                             AllowDrop="True"
                                             Drop="ChatInput_Drop"/>

                                    <Button Grid.Column="1"
                                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                                            Command="{Binding AskQuestionCommand}"
                                            ToolTip="Send message (Ctrl+Enter)"
                                            Height="56" Width="56">
                                        <materialDesign:PackIcon Kind="Send" Width="28" Height="28"/>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Splitter -->
                <GridSplitter Grid.Column="3" Width="4" 
                              Background="{DynamicResource MaterialDesignDivider}"
                              HorizontalAlignment="Center"/>

                <!-- RIGHT: Artifacts & Graph Panel -->
                <Border Grid.Column="4"
                        Background="{DynamicResource MaterialDesignCardBackground}"
                        materialDesign:ElevationAssist.Elevation="Dp2"
                        Margin="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Tab Selector -->
                        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryLight" Padding="8" Margin="8,8,8,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <RadioButton Content="ðŸŽ¨ Artifacts" 
                                             Style="{StaticResource MaterialDesignTabRadioButton}"
                                             IsChecked="True"
                                             GroupName="RightPanelTabs"
                                             Click="ShowArtifactsTab"
                                             Margin="0,0,8,0"/>
                                <RadioButton Content="ðŸ•¸ï¸ Graph" 
                                             Style="{StaticResource MaterialDesignTabRadioButton}"
                                             GroupName="RightPanelTabs"
                                             Click="ShowGraphTab"/>
                            </StackPanel>
                        </materialDesign:ColorZone>

                        <!-- Artifacts Tab -->
                        <Grid x:Name="ArtifactsTabContent" Grid.Row="1" Margin="12" Visibility="Visible">
                            <!-- Generation Buttons -->
                            <StackPanel VerticalAlignment="Top"
                                        Visibility="{Binding Artifacts.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverted}">
                                <TextBlock Text="Generate from sources:" 
                                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                                           Margin="0,0,0,12"/>
                                <Button Content="Deep Dive" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Command="{Binding GenerateDeepDiveCommand}"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,0,0,8"/>
                                <Button Content="Notebook Guide" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Command="{Binding GenerateNotebookGuideCommand}"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,0,0,8"/>
                                <Button Content="FAQ" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Command="{Binding GenerateFaqCommand}"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,0,0,8"/>
                                <Button Content="Study Guide" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Command="{Binding GenerateStudyGuideCommand}"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,0,0,8"/>
                                <Button Content="Summary" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Command="{Binding GenerateSummaryCommand}"
                                        HorizontalAlignment="Stretch"
                                        Margin="0,0,0,8"/>
                                <Button Content="Podcast Script" 
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Command="{Binding GeneratePodcastScriptCommand}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>

                            <!-- Artifacts List & Viewer -->
                            <Grid Visibility="{Binding Artifacts.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Artifacts List -->
                                <ListBox Grid.Row="0" 
                                         ItemsSource="{Binding Artifacts}"
                                         SelectedItem="{Binding SelectedArtifact}"
                                         MaxHeight="200"
                                         Margin="0,0,0,12">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Title}" FontWeight="Medium"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                                <!-- Artifact Viewer -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                              Visibility="{Binding SelectedArtifact, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel>
                                        <Button Content="EXPORT TO OBSIDIAN"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Command="{Binding ExportArtifactToObsidianCommand}"
                                                HorizontalAlignment="Left"
                                                Margin="0,0,0,16"/>
                                        
                                        <TextBlock Text="{Binding SelectedArtifact.Title}"
                                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,12"/>
                                        
                                        <TextBlock Text="{Binding SelectedArtifact.Content}"
                                                   TextWrapping="Wrap"
                                                   Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Grid>

                        <!-- Graph Tab -->
                        <Grid x:Name="GraphTabContent" Grid.Row="1" Margin="12" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Button Grid.Row="0" 
                                    Content="REFRESH GRAPH"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Command="{Binding RefreshGraphCommand}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,12"/>

                            <Border Grid.Row="1" 
                                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                <Canvas x:Name="GraphCanvas" Background="{DynamicResource MaterialDesignCardBackground}">
                                    <!-- Graph visualization will be drawn here -->
                                </Canvas>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>
