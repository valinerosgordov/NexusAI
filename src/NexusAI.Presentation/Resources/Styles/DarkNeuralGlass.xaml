<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- ðŸŽ¨ DARK NEURAL GLASS - DESIGN SYSTEM 2026                   -->
    <!-- Cyber-Noir + Glassmorphism + Apple Minimalism              -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- ðŸŽ¨ COLOR PALETTE: CYBER-NOIR                               -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    
    <!-- Background Base: Almost pure black -->
    <SolidColorBrush x:Key="BackgroundBase" Color="#050505"/>
    
    <!-- Surface Layers: Obsidian Glass (Exact spec) -->
    <SolidColorBrush x:Key="SurfaceLayer1" Color="#CC141416"/>
    <SolidColorBrush x:Key="SurfaceLayer2" Color="#1C1C1E"/>
    <SolidColorBrush x:Key="ObsidianGlass" Color="#CC141416"/>
    
    <!-- Glassmorphism: Semi-transparent dark -->
    <SolidColorBrush x:Key="GlassSurface" Color="#CC0A0A0A"/>
    <SolidColorBrush x:Key="GlassSurfaceLight" Color="#99141416"/>
    
    <!-- Primary Accent: Neon Plasma Gradient (Deep Indigo â†’ Electric Violet) -->
    <LinearGradientBrush x:Key="NeonPlasmaGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#6200EA" Offset="0"/>
        <GradientStop Color="#B500FF" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Legacy alias for compatibility -->
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#6200EA" Offset="0"/>
        <GradientStop Color="#B500FF" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Accent Glow (for shadows) -->
    <LinearGradientBrush x:Key="AccentGlowGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#996200EA" Offset="0"/>
        <GradientStop Color="#99B500FF" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Purple Rim Light (Frosted Edge Effect) -->
    <LinearGradientBrush x:Key="PurpleRimLight" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#33B500FF" Offset="0"/>
        <GradientStop Color="#00B500FF" Offset="0.5"/>
        <GradientStop Color="#33B500FF" Offset="1"/>
    </LinearGradientBrush>
    
    <SolidColorBrush x:Key="FrostedEdge" Color="#33FFFFFF"/>
    
    <!-- Text Colors (Cyber-Noir Spec) -->
    <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#B0B0C0"/>
    <SolidColorBrush x:Key="TextTertiary" Color="#606070"/>
    
    <!-- Chat Bubble Colors -->
    <SolidColorBrush x:Key="AiBubbleBackground" Color="#CC2C2C2E"/>
    <SolidColorBrush x:Key="AiBubbleGlow" Color="#33FFFFFF"/>
    
    <!-- Liquid Plasma Animation for User Bubble (Radial for "alive" effect) -->
    <RadialGradientBrush x:Key="LiquidPlasmaGradient" RadiusX="1" RadiusY="1" Center="0.4,0.4">
        <GradientStop Color="#6200EA" Offset="0"/>
        <GradientStop Color="#8B00D4" Offset="0.5"/>
        <GradientStop Color="#B500FF" Offset="1"/>
    </RadialGradientBrush>
    
    <!-- Legacy alias -->
    <RadialGradientBrush x:Key="PlasmaGradient" RadiusX="0.8" RadiusY="0.8">
        <GradientStop Color="#996200EA" Offset="0"/>
        <GradientStop Color="#99B500FF" Offset="0.5"/>
        <GradientStop Color="#996200EA" Offset="1"/>
    </RadialGradientBrush>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- ðŸ”˜ BUTTON STYLES: GLASS NAVIGATION                         -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    
    <Style x:Key="GlassNavButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="16"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover State: Purple glow + scale -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border"
                                                      Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                      To="#33B500FF"
                                                      Duration="0:0:0.15">
                                            <ColorAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </ColorAnimation.EasingFunction>
                                        </ColorAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.05"
                                                       Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.05"
                                                       Duration="0:0:0.15">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border"
                                                      Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                      To="Transparent"
                                                      Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1"
                                                       Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1"
                                                       Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                        </Trigger>
                        
                        <!-- Pressed State -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Selected/Active Navigation Button -->
    <Style x:Key="GlassNavButtonSelected" TargetType="Button" BasedOn="{StaticResource GlassNavButton}">
        <Setter Property="Background" Value="{StaticResource AccentGradient}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#B500FF" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- ðŸ’¬ CHAT BUBBLE STYLES: LIQUID EFFECT                       -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    
    <!-- AI Chat Bubble: Glassy dark with white glow -->
    <Style x:Key="AiChatBubble" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource AiBubbleBackground}"/>
        <Setter Property="CornerRadius" Value="20,20,20,4"/>
        <Setter Property="Padding" Value="20,16"/>
        <Setter Property="Margin" Value="0,0,120,16"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource AiBubbleGlow}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#33FFFFFF" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- User Chat Bubble: Liquid Neon Plasma (The Hero Element) -->
    <Style x:Key="UserChatBubble" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource LiquidPlasmaGradient}"/>
        <Setter Property="CornerRadius" Value="20,20,4,20"/>
        <Setter Property="Padding" Value="20,16"/>
        <Setter Property="Margin" Value="120,0,0,16"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#B500FF" BlurRadius="24" ShadowDepth="0" Opacity="0.6"/>
            </Setter.Value>
        </Setter>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TranslateTransform Y="0"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- ðŸƒ CARD STYLES: SURFACE LAYERS                             -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    
    <!-- Kanban Task Card: Obsidian Glass Pill -->
    <Style x:Key="GlassCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ObsidianGlass}"/>
        <Setter Property="CornerRadius" Value="24"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource FrostedEdge}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" BlurRadius="16" ShadowDepth="0" Opacity="0.4"/>
            </Setter.Value>
        </Setter>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TranslateTransform Y="0"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="GlassCardElevated" TargetType="Border" BasedOn="{StaticResource GlassCard}">
        <Setter Property="Background" Value="{StaticResource SurfaceLayer2}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PurpleRimLight}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#B500FF" BlurRadius="40" ShadowDepth="0" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Modal/Dialog: Super-rounded corners (32px) -->
    <Style x:Key="GlassModal" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ObsidianGlass}"/>
        <Setter Property="CornerRadius" Value="32"/>
        <Setter Property="Padding" Value="32"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource FrostedEdge}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" BlurRadius="48" ShadowDepth="0" Opacity="0.7"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Sidebar: Frosted glass pane -->
    <Style x:Key="GlassSidebar" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ObsidianGlass}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
        <Setter Property="BorderBrush" Value="{StaticResource FrostedEdge}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" BlurRadius="24" ShadowDepth="0" Opacity="0.3" Direction="0"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- ðŸ“ INPUT STYLES: FLOATING GLASS CAPSULE                    -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    
    <Style x:Key="GlassCapsuleTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource GlassSurfaceLight}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#33B500FF"/>
        <Setter Property="Padding" Value="20,14"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CaretBrush" Value="{StaticResource AccentGradient}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="28"
                            Padding="{TemplateBinding Padding}">
                        <ScrollViewer x:Name="PART_ContentHost"
                                    VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border"
                                                      Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                      To="#66B500FF"
                                                      Duration="0:0:0.2">
                                            <ColorAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </ColorAnimation.EasingFunction>
                                        </ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border"
                                                      Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                      To="#33B500FF"
                                                      Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                            <Setter TargetName="Border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#B500FF" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- ðŸŽ­ ANIMATIONS: FLUID MOTION                                -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    
    <!-- Message Entrance Animation: Slide up + Fade in (300ms) -->
    <Storyboard x:Key="MessageEntranceAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.Y)"
                        From="20" To="0"
                        Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <!-- Mode Switching Animation: Smooth color cross-fade (500ms) -->
    <Storyboard x:Key="ModeSwitchAnimation">
        <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                        Duration="0:0:0.5">
            <ColorAnimation.EasingFunction>
                <CubicEase EasingMode="EaseInOut"/>
            </ColorAnimation.EasingFunction>
        </ColorAnimation>
    </Storyboard>
    
    <!-- Card Lift Animation: Used when dragging Kanban cards -->
    <Storyboard x:Key="CardLiftAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        To="0.85"
                        Duration="0:0:0.15">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.Y)"
                        To="-8"
                        Duration="0:0:0.15">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <Storyboard x:Key="CardDropAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        To="1"
                        Duration="0:0:0.2">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.Y)"
                        To="0"
                        Duration="0:0:0.2">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <!-- Page Transition: Cross-fade + Slide -->
    <Storyboard x:Key="PageTransitionIn">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="0" To="1"
                        Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.X)"
                        From="30" To="0"
                        Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>
    
    <Storyboard x:Key="PageTransitionOut">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                        From="1" To="0"
                        Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseIn"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- ðŸ”² SCROLLBAR: MINIMAL GLASS STYLE                          -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    
    <Style x:Key="GlassScrollBar" TargetType="ScrollBar">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="8"/>
        <Setter Property="MinWidth" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"/>
                        <Track x:Name="PART_Track" IsDirectionReversed="True">
                            <Track.Thumb>
                                <Thumb>
                                    <Thumb.Template>
                                        <ControlTemplate>
                                            <Border Background="{StaticResource TextTertiary}"
                                                   CornerRadius="4"
                                                   Opacity="0.3"/>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!-- ðŸŽ¨ ACCENT BUTTON: GRADIENT WITH GLOW                       -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    
    <Style x:Key="AccentButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentGradient}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#B500FF" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="16"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1.05"
                                                       Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1.05"
                                                       Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                                                       To="1"
                                                       Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                                                       To="1"
                                                       Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

