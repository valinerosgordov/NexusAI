<Window x:Class="NexusAI.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Nexus AI" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0A"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        FontFamily="Segoe UI, SF Pro Display, -apple-system"
        TextElement.Foreground="#F5F5F7"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="ClearType">
    <Window.Resources>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="SlideUp">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                             From="20" To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4"/>
        </Storyboard>
        <Style x:Key="ModernButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#8B5CF6"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="10"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                 To="1.02" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                 To="1.02" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                 To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                 To="1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SubtleButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#2C2C2E"/>
            <Setter Property="Foreground" Value="#F5F5F7"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform X="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1C1C1E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Foreground" Value="#98989D"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#F5F5F7"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                 To="1.15" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                 To="1.15" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                                 To="1" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                                 To="1" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <materialDesign:DialogHost Identifier="RootDialog">
        <Border Background="{StaticResource BackgroundBase}" CornerRadius="16" BorderThickness="1" BorderBrush="{StaticResource FrostedEdge}">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="48" ShadowDepth="0" Opacity="0.8"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Custom Title Bar: Blends seamlessly into UI -->
                <Border Grid.Row="0" 
                        Background="{StaticResource ObsidianGlass}" 
                        CornerRadius="16,16,0,0"
                        BorderThickness="0,0,0,1"
                        BorderBrush="{StaticResource FrostedEdge}"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid Height="56" Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Width="36" Height="36" CornerRadius="10" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#6200EA" Offset="0"/>
                                        <GradientStop Color="#B500FF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <materialDesign:PackIcon Kind="Brain" Width="20" Height="20" 
                                                         VerticalAlignment="Center" HorizontalAlignment="Center"
                                                         Foreground="White"/>
                            </Border>
                            <TextBlock Text="{DynamicResource S.AppTitle}" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Mode Switcher: Cyber-Noir Glass Pill -->
                            <Border Background="{StaticResource ObsidianGlass}" 
                                    CornerRadius="24"
                                    Padding="6"
                                    Margin="0,0,12,0"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource FrostedEdge}">
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="ðŸ’¼"
                                                 ToolTip="Professional Mode"
                                                 IsChecked="{Binding SessionContext.IsProfessionalMode, Mode=OneWay}"
                                                 Command="{Binding SwitchAppModeCommand}"
                                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                                 Foreground="{StaticResource NeonPlasmaGradient}"
                                                 FontSize="16"
                                                 Width="40" Height="32"
                                                 Margin="2,0"/>
                                    <RadioButton Content="ðŸŽ“"
                                                 ToolTip="Student Mode"
                                                 IsChecked="{Binding SessionContext.IsStudentMode, Mode=OneWay}"
                                                 Command="{Binding SwitchAppModeCommand}"
                                                 Style="{StaticResource MaterialDesignTabRadioButton}"
                                                 Foreground="{StaticResource NeonPlasmaGradient}"
                                                 FontSize="16"
                                                 Width="40" Height="32"
                                                 Margin="2,0"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{StaticResource ObsidianGlass}" 
                                    CornerRadius="16" 
                                    Padding="12,8" 
                                    Margin="0,0,12,0"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource FrostedEdge}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CloudOutline" Width="22" Height="22" 
                                                         Foreground="#FFFFFF"
                                                         Margin="0,0,10,0" VerticalAlignment="Center"
                                                         Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Gemini}"/>
                                <materialDesign:PackIcon Kind="ServerNetwork" Width="22" Height="22" 
                                                         Foreground="#FFFFFF"
                                                         Margin="0,0,10,0" VerticalAlignment="Center"
                                                         Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Ollama}"/>
                                <ComboBox ItemsSource="{Binding Source={StaticResource AiProviderValues}}"
                                          SelectedItem="{Binding SelectedAiProvider}"
                                          MinWidth="130"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Foreground="#FFFFFF"
                                          Background="#2A2A2E"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                          materialDesign:HintAssist.Hint="AI Provider"
                                          materialDesign:HintAssist.Foreground="#E0E0E0"
                                          BorderBrush="#6200EA"
                                          BorderThickness="2"
                                          VerticalAlignment="Center"
                                          Padding="12,8"
                                          Margin="0,0,12,0"/>
                                <ComboBox ItemsSource="{Binding AvailableOllamaModels}"
                                          SelectedItem="{Binding SelectedOllamaModel}"
                                          MinWidth="150"
                                          FontSize="16"
                                          FontWeight="SemiBold"
                                          Foreground="#FFFFFF"
                                          Background="#2A2A2E"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                          materialDesign:HintAssist.Hint="Model"
                                          materialDesign:HintAssist.Foreground="#E0E0E0"
                                          BorderBrush="#6200EA"
                                          BorderThickness="2"
                                          Padding="12,8"
                                          VerticalAlignment="Center"
                                          Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Ollama}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                       Foreground="#FFFFFF"
                                                       FontSize="15"
                                                       FontWeight="Medium"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                        Command="{Binding LoadOllamaModelsCommand}"
                                        Foreground="#FFFFFF"
                                        ToolTip="Refresh Ollama models"
                                        Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Ollama}">
                                    <materialDesign:PackIcon Kind="Refresh" Foreground="#FFFFFF"/>
                                </Button>
                            </StackPanel>
                        </Border>
                        <Border Background="{StaticResource ObsidianGlass}" 
                                CornerRadius="16" 
                                Padding="12,8" 
                                Margin="0,0,12,0"
                                BorderThickness="1"
                                BorderBrush="{StaticResource FrostedEdge}"
                                Visibility="{Binding SelectedAiProvider, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Gemini}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Key" Width="22" Height="22" 
                                                         Foreground="#FFFFFF"
                                                         Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <PasswordBox x:Name="ApiKeyBox" 
                                             Width="280"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             Foreground="#FFFFFF"
                                             Background="#2A2A2E"
                                             materialDesign:HintAssist.Hint="Paste your Gemini API Key"
                                             materialDesign:HintAssist.IsFloating="False"
                                             materialDesign:HintAssist.Foreground="#E0E0E0"
                                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                             BorderBrush="#6200EA"
                                             BorderThickness="2"
                                             Padding="14,12"
                                             PasswordChanged="ApiKeyBox_PasswordChanged"
                                             ToolTip="Get your API key from aistudio.google.com"/>
                            </StackPanel>
                        </Border>
                            <!-- Window Control Buttons: Minimal Glass Style -->
                            <StackPanel Orientation="Horizontal">
                                <!-- Settings Button -->
                                <Button Style="{StaticResource ChromeButton}" 
                                        Click="OpenSettings" 
                                        Margin="0,0,16,0"
                                        ToolTip="Settings (Language, Theme, API Keys)">
                                    <materialDesign:PackIcon Kind="Cog" Width="18" Height="18" Foreground="#FFFFFF"/>
                                </Button>
                                
                                <Button Style="{StaticResource ChromeButton}" 
                                        Click="MinimizeWindow" 
                                        Margin="0,0,2,0"
                                        ToolTip="{DynamicResource S.Common.Minimize}">
                                    <materialDesign:PackIcon Kind="WindowMinimize" Width="14" Height="14"/>
                                </Button>
                                <Button Style="{StaticResource ChromeButton}" 
                                        Click="MaximizeWindow"
                                        Margin="0,0,2,0"
                                        ToolTip="{DynamicResource S.Common.Maximize}">
                                    <materialDesign:PackIcon Kind="WindowMaximize" Width="14" Height="14"/>
                                </Button>
                                <Button Style="{StaticResource ChromeCloseButton}" 
                                        Click="CloseWindow"
                                        ToolTip="{DynamicResource S.Common.Close}">
                                    <materialDesign:PackIcon Kind="Close" Width="14" Height="14"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="360" MinWidth="320" MaxWidth="480"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*" MinWidth="300"/>
                </Grid.ColumnDefinitions>
                <!-- Sidebar: Frosted Glass Pane -->
                <Grid Grid.Column="0">
                    <Border Style="{StaticResource GlassSidebar}"
                            CornerRadius="0,0,0,16"
                            Margin="0,0,0,12"
                            Padding="0"
                            AllowDrop="True"
                            Drop="Sidebar_Drop"
                            DragEnter="Sidebar_DragEnter"
                            DragLeave="Sidebar_DragLeave"
                            x:Name="SidebarBorder">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Margin="24,20,24,16">
                            <TextBlock FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}">
                                <Run Text="ðŸ“š "/>
                                <Run Text="{Binding SessionContext.CurrentMode, Converter={StaticResource ModeToStringConverter}, ConverterParameter='Knowledge Base / Study Library'}"/>
                            </TextBlock>
                            <TextBlock FontSize="12"
                                       Foreground="{StaticResource TextSecondary}"
                                       Margin="0,6,0,0">
                                <Run Text="{Binding SessionContext.CurrentMode, Converter={StaticResource ModeToStringConverter}, ConverterParameter='Drag &amp; drop files or click to add / Add your course materials &amp; textbooks'}"/>
                            </TextBlock>
                        </StackPanel>
                        <Grid Grid.Row="1">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" 
                                        Visibility="{Binding Sources.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverted}">
                                <Border Width="96" Height="96" 
                                        CornerRadius="48"
                                        Background="{StaticResource ObsidianGlass}"
                                        BorderThickness="2"
                                        BorderBrush="{StaticResource NeonPlasmaGradient}"
                                        Margin="0,0,0,16"
                                        HorizontalAlignment="Center">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#B500FF" BlurRadius="16" ShadowDepth="0" Opacity="0.3"/>
                                    </Border.Effect>
                                    <materialDesign:PackIcon Kind="CloudUpload" Width="48" Height="48"
                                                             Foreground="{StaticResource NeonPlasmaGradient}"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="No documents loaded" 
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Drag &amp; drop files or click ADD DOCUMENTS" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondary}"
                                           HorizontalAlignment="Center" 
                                           Margin="0,6,0,0"
                                           TextAlignment="Center"
                                           MaxWidth="200"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                          Margin="16,0"
                                          Visibility="{Binding Sources.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                <ItemsControl ItemsSource="{Binding Sources}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource ObsidianGlass}" 
                                                    CornerRadius="16" 
                                                    Padding="14"
                                                    Margin="0,0,0,10"
                                                    BorderThickness="1"
                                                    BorderBrush="{StaticResource FrostedEdge}"
                                                    Cursor="Hand"
                                                    x:Name="DocumentCard">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderBrush" Value="{StaticResource NeonPlasmaGradient}"/>
                                                                <Setter Property="Effect">
                                                                    <Setter.Value>
                                                                        <DropShadowEffect Color="#B500FF" BlurRadius="12" ShadowDepth="0" Opacity="0.4"/>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Trigger.EnterActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                                                                                              To="-2,0,-2,10" 
                                                                                              Duration="0:0:0.15">
                                                                                <ThicknessAnimation.EasingFunction>
                                                                                    <CubicEase EasingMode="EaseOut"/>
                                                                                </ThicknessAnimation.EasingFunction>
                                                                            </ThicknessAnimation>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.EnterActions>
                                                                <Trigger.ExitActions>
                                                                    <BeginStoryboard>
                                                                        <Storyboard>
                                                                            <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                                                                                              To="0,0,0,10" 
                                                                                              Duration="0:0:0.15">
                                                                                <ThicknessAnimation.EasingFunction>
                                                                                    <CubicEase EasingMode="EaseOut"/>
                                                                                </ThicknessAnimation.EasingFunction>
                                                                            </ThicknessAnimation>
                                                                        </Storyboard>
                                                                    </BeginStoryboard>
                                                                </Trigger.ExitActions>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.Column="0" 
                                                            Width="36" Height="36" 
                                                            CornerRadius="10"
                                                            Margin="0,0,12,0"
                                                            VerticalAlignment="Center"
                                                            Background="{StaticResource NeonPlasmaGradient}">
                                                        <materialDesign:PackIcon Kind="{Binding Document.FilePath, Converter={StaticResource FileIconConverter}}"
                                                                                 Width="18" Height="18"
                                                                                 Foreground="White"
                                                                                 HorizontalAlignment="Center"
                                                                                 VerticalAlignment="Center"/>
                                                    </Border>
                                                    <CheckBox Grid.Column="1" 
                                                              IsChecked="{Binding IsIncluded}"
                                                              ToolTip="Include in context"
                                                              Margin="0,0,12,0"
                                                              VerticalAlignment="Center"/>
                                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}" 
                                                                   FontWeight="SemiBold"
                                                                   FontSize="13"
                                                                   Foreground="{StaticResource TextPrimary}"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding LoadedAtDisplay}" 
                                                                   FontSize="11"
                                                                   Foreground="{StaticResource TextSecondary}"
                                                                   Margin="0,2,0,0"/>
                                                    </StackPanel>
                                                    <Button Grid.Column="3" 
                                                            Style="{StaticResource MaterialDesignIconButton}"
                                                            Width="32" Height="32"
                                                            Command="{Binding DataContext.RemoveSourceCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                            CommandParameter="{Binding}"
                                                            ToolTip="Remove document"
                                                            Foreground="#98989D">
                                                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                        <StackPanel Grid.Row="2" Margin="24,8,24,20">
                            
                            <Expander Header="{DynamicResource S.Sidebar.ObsidianVault}" Margin="0,0,0,12"
                                      materialDesign:ExpanderAssist.HorizontalHeaderPadding="12">
                                <StackPanel Margin="12,8">
                                    <TextBox Text="{Binding ObsidianVaultPath, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Vault Path"
                                             Style="{StaticResource MaterialDesignFilledTextBox}"
                                             Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding ObsidianSubfolder, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Subfolder (optional)"
                                             Style="{StaticResource MaterialDesignFilledTextBox}"
                                             Margin="0,0,0,12"/>
                                    <Button Content="{DynamicResource S.Sidebar.SyncVault}" 
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Command="{Binding LoadObsidianVaultCommand}"
                                            HorizontalAlignment="Stretch"
                                            ToolTip="Load all .md notes from vault"/>
                                </StackPanel>
                            </Expander>
                            <Button Command="{Binding AddDocumentCommand}"
                                    HorizontalAlignment="Stretch">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource AccentButton}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SessionContext.IsStudentMode}" Value="True">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                            <GradientStop Color="#FFB340" Offset="0"/>
                                                            <GradientStop Color="#00D9FF" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="FileUpload" 
                                                             Width="18" Height="18" 
                                                             Margin="0,0,10,0"
                                                             VerticalAlignment="Center"/>
                                    <TextBlock FontWeight="SemiBold"
                                               FontSize="13"
                                               VerticalAlignment="Center">
                                        <Run Text="{Binding SessionContext.CurrentMode, Converter={StaticResource ModeToStringConverter}, ConverterParameter='ADD DOCUMENTS / ADD STUDY MATERIALS'}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Button>
                            <ProgressBar IsIndeterminate="True"
                                         Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                                         Margin="0,12,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border x:Name="DragDropOverlay" 
                        Visibility="Collapsed" 
                        Background="{DynamicResource PrimaryHueMidBrush}"
                        Opacity="0.1"
                        BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Margin="8"
                        IsHitTestVisible="False">
                    <TextBlock Text="Drop files here" 
                               FontSize="24" FontWeight="Bold"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </Border>
            </Grid>
                <GridSplitter Grid.Column="1" Width="4" 
                              Background="{DynamicResource MaterialDesignDivider}"
                              HorizontalAlignment="Center"/>
                <!-- Chat Interface: Floats above Void Background -->
                <Border Grid.Column="2" 
                        Style="{StaticResource GlassSidebar}"
                        CornerRadius="0,0,16,16"
                        Margin="0,0,0,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" 
                                      Padding="32,24" x:Name="ChatScrollViewer">
                            <StackPanel>
                                <Border Style="{StaticResource GlassCard}"
                                        Padding="32" 
                                        Margin="0,0,0,24"
                                        Visibility="{Binding ChatMessages.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverted}">
                                    <StackPanel>
                                        <TextBlock FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   Margin="0,0,0,12">
                                            <Run Text="ðŸ‘‹ Welcome to Nexus AI"/>
                                        </TextBlock>
                                        <TextBlock FontSize="14"
                                                   LineHeight="22"
                                                   TextWrapping="Wrap"
                                                   Foreground="{StaticResource TextSecondary}">
                                            <Run Text="{Binding SessionContext.CurrentMode, Converter={StaticResource ModeToStringConverter}, ConverterParameter='I am your AI research assistant powered by Gemini 2.0 Flash. Load documents to start asking questions. / I am your Socratic tutor powered by Gemini 2.0 Flash. Upload your study materials and let us learn together!'}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                                <ItemsControl ItemsSource="{Binding ChatMessages}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <!-- User Bubble: Liquid Neon Plasma (The Hero Element) -->
                                                <Border Style="{StaticResource UserChatBubble}"
                                                        Visibility="{Binding IsUser, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Content}" 
                                                               TextWrapping="Wrap"
                                                               FontSize="14"
                                                               LineHeight="22"
                                                               Foreground="{StaticResource TextPrimary}"
                                                               FontWeight="Medium"/>
                                                </Border>
                                                <!-- AI Bubble: Obsidian Glass with white rim lighting -->
                                                <Border Style="{StaticResource AiChatBubble}"
                                                        Visibility="{Binding IsUser, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverted}">
                                                    <Border.ContextMenu>
                                                        <ContextMenu>
                                                            <MenuItem Header="{DynamicResource S.Chat.ReadAloud}" 
                                                                      Command="{Binding DataContext.PlayAudioCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                      CommandParameter="{Binding Content}">
                                                                <MenuItem.Icon>
                                                                    <materialDesign:PackIcon Kind="VolumeHigh"/>
                                                                </MenuItem.Icon>
                                                            </MenuItem>
                                                            <MenuItem Header="{DynamicResource S.Chat.Copy}" 
                                                                      Command="{Binding CopyCommand}">
                                                                <MenuItem.Icon>
                                                                    <materialDesign:PackIcon Kind="ContentCopy"/>
                                                                </MenuItem.Icon>
                                                            </MenuItem>
                                                        </ContextMenu>
                                                    </Border.ContextMenu>
                                                <StackPanel>
                                                    <!-- Thinking Process Expander -->
                                                    <Expander Header="{DynamicResource S.Chat.ThinkingProcess}"
                                                              Visibility="{Binding HasThinkingSteps, Converter={StaticResource BoolToVisibilityConverter}}"
                                                              Margin="0,0,0,12"
                                                              Background="{StaticResource ObsidianGlass}"
                                                              Foreground="{StaticResource NeonPlasmaGradient}">
                                                        <ItemsControl ItemsSource="{Binding ThinkingSteps}" Margin="8,8,0,0">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal" Margin="0,4">
                                                                        <materialDesign:PackIcon Kind="LightbulbOnOutline" 
                                                                                                 Width="14" Height="14"
                                                                                                 Foreground="{StaticResource NeonPlasmaGradient}"
                                                                                                 VerticalAlignment="Top"
                                                                                                 Margin="0,2,8,0"/>
                                                                        <TextBlock Text="{Binding}" 
                                                                                   TextWrapping="Wrap"
                                                                                   Foreground="{StaticResource TextSecondary}"
                                                                                   FontSize="12"
                                                                                   FontStyle="Italic"
                                                                                   MaxWidth="520"/>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </Expander>
                                                    
                                                    <!-- Main Content -->
                                                    <TextBlock Text="{Binding ContentWithoutSteps}"
                                                               TextWrapping="Wrap"
                                                               FontSize="14"
                                                               LineHeight="22"
                                                               Foreground="{StaticResource TextPrimary}"/>
                                                    
                                                    <!-- Source Citations -->
                                                    <ItemsControl ItemsSource="{Binding SourceCitations}"
                                                                  Margin="0,12,0,0"
                                                                  Visibility="{Binding SourceCitations, Converter={StaticResource NullToVisibilityConverter}}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <materialDesign:Chip Content="{Binding}" 
                                                                                     Margin="0,0,8,4"
                                                                                     IconBackground="{DynamicResource SecondaryHueMidBrush}"
                                                                                     IconForeground="White">
                                                                    <materialDesign:Chip.Icon>
                                                                        <materialDesign:PackIcon Kind="FileDocument"/>
                                                                    </materialDesign:Chip.Icon>
                                                                </materialDesign:Chip>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                                <StackPanel HorizontalAlignment="Left" 
                                            Visibility="{Binding IsThinking, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Margin="0,12">
                                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                 Width="40" Height="40"
                                                 IsIndeterminate="True"
                                                 Value="0"/>
                                    <TextBlock Text="Thinking..." 
                                               Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                               HorizontalAlignment="Center"
                                               Margin="0,8,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                        <!-- Chat Input: Floating Glass Capsule -->
                        <Border Grid.Row="1" 
                                Background="{StaticResource ObsidianGlass}"
                                Padding="24,20"
                                BorderBrush="{StaticResource FrostedEdge}"
                                BorderThickness="0,1,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" 
                                        Style="{StaticResource GlassCard}"
                                        Padding="16,12"
                                        CornerRadius="20"
                                        Margin="0,0,0,12"
                                        Visibility="{Binding IsPlayingAudio, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Column="0" 
                                                Background="{StaticResource NeonPlasmaGradient}" 
                                                Width="32" Height="32" 
                                                CornerRadius="10"
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Center">
                                            <materialDesign:PackIcon Kind="VolumeHigh" 
                                                                     Width="16" Height="16"
                                                                     Foreground="White"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{DynamicResource S.Chat.PlayingAudio}"
                                                   VerticalAlignment="Center"
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextPrimary}"/>
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding PauseAudioCommand}"
                                                    Width="32" Height="32"
                                                    ToolTip="Pause"
                                                    Foreground="#98989D">
                                                <materialDesign:PackIcon Kind="Pause" Width="16" Height="16"/>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding StopAudioCommand}"
                                                    Width="32" Height="32"
                                                    ToolTip="Stop"
                                                    Foreground="#98989D">
                                                <materialDesign:PackIcon Kind="Stop" Width="16" Height="16"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Floating Glass Capsule Input -->
                                    <TextBox Grid.Column="0"
                                             Text="{Binding UserQuestion, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Type your question here..."
                                             materialDesign:HintAssist.Foreground="#B0B0C0"
                                             Style="{StaticResource GlassCapsuleTextBox}"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             MaxHeight="120"
                                             Margin="0,0,12,0"
                                             VerticalScrollBarVisibility="Auto"
                                             AllowDrop="True"
                                             Drop="ChatInput_Drop"/>
                                    
                                    <!-- Send Button: Neon Plasma Glow -->
                                    <Button Grid.Column="1"
                                            Command="{Binding AskQuestionCommand}"
                                            Style="{StaticResource AccentButton}"
                                            Width="64" Height="64"
                                            ToolTip="Send message (Ctrl+Enter)">
                                        <materialDesign:PackIcon Kind="Send" Width="28" Height="28" Foreground="#FFFFFF"/>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
                <GridSplitter Grid.Column="3" Width="4" 
                              Background="{DynamicResource MaterialDesignDivider}"
                              HorizontalAlignment="Center"/>
                <!-- Right Panel: Artifacts & Graph -->
                <Border Grid.Column="4"
                        Style="{StaticResource GlassSidebar}"
                        CornerRadius="0,0,16,0"
                        Margin="0,0,0,12"
                        BorderThickness="1,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" 
                                Style="{StaticResource GlassCard}"
                                Padding="6" 
                                Margin="16,16,16,16"
                                CornerRadius="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <RadioButton Grid.Column="0"
                                             Content="{DynamicResource S.Artifacts.Title}" 
                                             Style="{StaticResource MaterialDesignTabRadioButton}"
                                             IsChecked="True"
                                             FontSize="13"
                                             FontWeight="Bold"
                                             Foreground="{StaticResource TextPrimary}"
                                             GroupName="RightPanelTabs"
                                             HorizontalAlignment="Stretch"
                                             HorizontalContentAlignment="Center"
                                             Padding="0,8"
                                             Click="ShowArtifactsTab"/>
                                
                                <RadioButton Grid.Column="1"
                                             Content="{DynamicResource S.Artifacts.Graph}" 
                                             Style="{StaticResource MaterialDesignTabRadioButton}"
                                             FontSize="13"
                                             FontWeight="Bold"
                                             Foreground="{StaticResource TextPrimary}"
                                             GroupName="RightPanelTabs"
                                             HorizontalAlignment="Stretch"
                                             HorizontalContentAlignment="Center"
                                             Padding="0,8"
                                             Click="ShowGraphTab"/>
                            </Grid>
                        </Border>
                        <Grid x:Name="ArtifactsTabContent" Grid.Row="1" Margin="16,0,16,16" Visibility="Visible">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel VerticalAlignment="Top"
                                            Visibility="{Binding Artifacts.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=Inverted}">
                                    
                                    <TextBlock FontSize="11"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,12">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#8B5CF6"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SessionContext.IsStudentMode}" Value="True">
                                                        <Setter Property="Foreground" Value="#00D9FF"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run Text="{Binding SessionContext.CurrentMode, Converter={StaticResource ModeToStringConverter}, ConverterParameter='ðŸ“– RESEARCH / ðŸ“– ANALYSIS'}"/>
                                    </TextBlock>
                                    
                                    <Button Style="{StaticResource SubtleButton}"
                                            Command="{Binding GenerateDeepDiveCommand}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="BookOpenPageVariant" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock VerticalAlignment="Center">
                                                <Run Text="{Binding DataContext.SessionContext.CurrentMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ModeToStringConverter}, ConverterParameter='Deep Dive / Detailed Explanation'}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Style="{StaticResource SubtleButton}"
                                            Command="{Binding GenerateSummaryCommand}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,20">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="TextBoxOutline" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock VerticalAlignment="Center">
                                                <Run Text="{Binding DataContext.SessionContext.CurrentMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ModeToStringConverter}, ConverterParameter='Summary / Quick Notes'}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Button>
                                    
                                    <TextBlock FontSize="11"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,12">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#8B5CF6"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SessionContext.IsStudentMode}" Value="True">
                                                        <Setter Property="Foreground" Value="#00D9FF"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run Text="{Binding SessionContext.CurrentMode, Converter={StaticResource ModeToStringConverter}, ConverterParameter='ðŸ“š LEARNING / ðŸŽ“ STUDY TOOLS'}"/>
                                    </TextBlock>
                                    
                                    <Button Style="{StaticResource SubtleButton}"
                                            Command="{Binding GenerateNotebookGuideCommand}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="NotebookOutline" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock VerticalAlignment="Center">
                                                <Run Text="{Binding DataContext.SessionContext.CurrentMode, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ModeToStringConverter}, ConverterParameter='Notebook Guide / Lecture Notes'}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Style="{StaticResource SubtleButton}"
                                            Command="{Binding GenerateStudyGuideCommand}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="SchoolOutline" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Study Guide" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Style="{StaticResource SubtleButton}"
                                            Command="{Binding GenerateFaqCommand}"
                                            HorizontalAlignment="Stretch"
                                            Margin="0,0,0,20">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="HelpCircleOutline" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="FAQ" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <TextBlock FontSize="11"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,12">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#8B5CF6"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SessionContext.IsStudentMode}" Value="True">
                                                        <Setter Property="Foreground" Value="#00D9FF"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run Text="{Binding SessionContext.CurrentMode, Converter={StaticResource ModeToStringConverter}, ConverterParameter='ðŸŽ™ï¸ CONTENT / ðŸŽ™ï¸ CREATIVE'}"/>
                                    </TextBlock>
                                    
                                    <Button Style="{StaticResource SubtleButton}"
                                            Command="{Binding GeneratePodcastScriptCommand}"
                                            HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Microphone" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Podcast Script" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </ScrollViewer>
                            <Grid Visibility="{Binding Artifacts.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <ListBox Grid.Row="0" 
                                         ItemsSource="{Binding Artifacts}"
                                         SelectedItem="{Binding SelectedArtifact}"
                                         MaxHeight="200"
                                         Margin="0,0,0,12">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Title}" FontWeight="Medium"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                              Visibility="{Binding SelectedArtifact, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel>
                                        <Button Content="EXPORT TO OBSIDIAN"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Command="{Binding ExportArtifactToObsidianCommand}"
                                                HorizontalAlignment="Left"
                                                Margin="0,0,0,16"/>
                                        <TextBlock Text="{Binding SelectedArtifact.Title}"
                                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,12"/>
                                        <TextBlock Text="{Binding SelectedArtifact.Content}"
                                                   TextWrapping="Wrap"
                                                   Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Grid>
                        <Grid x:Name="GraphTabContent" Grid.Row="1" Margin="12" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Diagram Type Selector -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                <RadioButton Content="ðŸ›ï¸ Architecture" 
                                             IsChecked="True"
                                             Tag="architecture"
                                             GroupName="DiagramType"
                                             Style="{StaticResource MaterialDesignChoiceChipRadioButton}"
                                             Margin="0,0,8,0"
                                             Foreground="#F5F5F7"
                                             Checked="DiagramType_Checked"/>
                                <RadioButton Content="âš¡ Flow" 
                                             Tag="flow"
                                             GroupName="DiagramType"
                                             Style="{StaticResource MaterialDesignChoiceChipRadioButton}"
                                             Margin="0,0,8,0"
                                             Foreground="#F5F5F7"
                                             Checked="DiagramType_Checked"/>
                                <RadioButton Content="ðŸ“Š Entity" 
                                             Tag="entity"
                                             GroupName="DiagramType"
                                             Style="{StaticResource MaterialDesignChoiceChipRadioButton}"
                                             Foreground="#F5F5F7"
                                             Checked="DiagramType_Checked"/>
                            </StackPanel>
                            
                            <Button Grid.Row="1"
                                    Style="{StaticResource ModernButton}"
                                    Command="{Binding GenerateDiagramCommand}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,12">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#A78BFA" Offset="0"/>
                                        <GradientStop Color="#8B5CF6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="AutoFix" Width="18" Height="18" Margin="0,0,10,0"/>
                                    <TextBlock Text="GENERATE DIAGRAM" FontWeight="SemiBold" FontSize="13"/>
                                </StackPanel>
                            </Button>
                            
                            <Border Grid.Row="2" 
                                    Style="{StaticResource GlassCard}"
                                    CornerRadius="20">
                                <TextBlock Text="Graph visualization (Coming soon)" 
                                           Foreground="{StaticResource TextSecondary}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
            </Grid>
        </Border>
    </materialDesign:DialogHost>
</Window>
