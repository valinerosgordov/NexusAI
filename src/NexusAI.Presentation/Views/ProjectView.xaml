<UserControl x:Class="NexusAI.Presentation.Views.ProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{StaticResource BackgroundBase}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header: Glass -->
        <Border Grid.Row="0" 
                Background="{StaticResource ObsidianGlass}" 
                Padding="32,24"
                BorderThickness="0,0,0,1"
                BorderBrush="{StaticResource FrostedEdge}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“‹ Manager's Dashboard" 
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimary}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="AI-powered project management" 
                               FontSize="13"
                               Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="âž• NEW PROJECT"
                        Command="{Binding GenerateProjectFromIdeaCommand}"
                        Style="{StaticResource AccentButton}"
                        Height="48"
                        Padding="24,0"/>
            </Grid>
        </Border>

        <!-- Analytics Widget: Glass -->
        <Border Grid.Row="1" 
                Background="{StaticResource ObsidianGlass}" 
                Padding="24,20"
                BorderThickness="0,0,0,1"
                BorderBrush="{StaticResource FrostedEdge}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Completion Stats -->
                <Border Grid.Column="0"
                        Style="{StaticResource GlassCard}"
                        Padding="20"
                        Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ¯ Project Completion" 
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,0,12"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock FontSize="32" 
                                           FontWeight="Bold"
                                           Margin="0,0,0,4">
                                    <TextBlock.Foreground>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#6200EA" Offset="0"/>
                                            <GradientStop Color="#B500FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </TextBlock.Foreground>
                                    <Run Text="{Binding CompletionPercentage, StringFormat={}{0:F0}}"/>
                                    <Run Text="%" FontSize="20"/>
                                </TextBlock>
                                <TextBlock Foreground="{StaticResource TextSecondary}" FontSize="12">
                                    <Run Text="{Binding CompletedTasks}"/>
                                    <Run Text=" of "/>
                                    <Run Text="{Binding TotalTasks}"/>
                                    <Run Text=" tasks completed"/>
                                </TextBlock>
                            </StackPanel>

                            <ProgressBar Grid.Column="1"
                                         Style="{StaticResource MaterialDesignCircularProgressBar}"
                                         Value="{Binding CompletionPercentage}"
                                         Width="60" Height="60"
                                         Foreground="{StaticResource NeonPlasmaGradient}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Divider -->
                <Border Grid.Column="1" Width="1" Background="{StaticResource FrostedEdge}" Margin="16,0"/>

                <!-- Tasks by Role -->
                <Border Grid.Column="2"
                        Style="{StaticResource GlassCard}"
                        Padding="20"
                        Margin="12,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¥ Tasks by Role" 
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondary}"
                                   Margin="0,0,0,12"/>
                        <ItemsControl ItemsSource="{Binding RoleDistribution}"
                                      MaxHeight="80">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Column="0"
                                                Background="{Binding Color}"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Role}" 
                                                       FontSize="11"
                                                       FontWeight="Medium"
                                                       Foreground="White"/>
                                        </Border>

                                        <ProgressBar Grid.Column="1"
                                                     Value="{Binding Count}"
                                                     Maximum="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.TotalTasks}"
                                                     Height="8"
                                                     Margin="8,0"
                                                     VerticalAlignment="Center"
                                                     Foreground="{Binding Color}"
                                                     Background="#2C2C2E"/>

                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Count}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimary}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Kanban Board: Floating columns on Void -->
        <ScrollViewer Grid.Row="2" 
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="360"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="360"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="360"/>
                </Grid.ColumnDefinitions>

                <!-- TO DO Column: No visible borders, floating header -->
                <StackPanel Grid.Column="0">
                    <!-- Column Header: Floating -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="ðŸ“ TO DO" 
                                   FontSize="15" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextSecondary}"/>
                        <Border Grid.Column="1"
                                Background="{StaticResource ObsidianGlass}"
                                BorderThickness="1"
                                BorderBrush="{StaticResource FrostedEdge}"
                                CornerRadius="12"
                                Padding="10,6"
                                MinWidth="32">
                            <TextBlock Text="{Binding TodoTasks.Count}"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <!-- Task Cards: Obsidian Glass Pills -->
                    <ItemsControl ItemsSource="{Binding TodoTasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Margin="0,0,0,12"
                                                     Padding="16"
                                                     MouseDoubleClick="TaskCard_MouseDoubleClick"
                                                     Tag="{Binding}"
                                                     Cursor="Hand">
                                    <materialDesign:Card.Style>
                                        <Style TargetType="materialDesign:Card" BasedOn="{StaticResource {x:Type materialDesign:Card}}">
                                            <Setter Property="Background" Value="{StaticResource ObsidianGlass}"/>
                                            <Setter Property="UniformCornerRadius" Value="24"/>
                                            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp0"/>
                                        </Style>
                                    </materialDesign:Card.Style>
                                    <StackPanel>
                                        <!-- Task Header -->
                                        <Grid Margin="0,0,0,12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Priority Badge -->
                                                <Border Grid.Column="0"
                                                        Background="{Binding PriorityColor}"
                                                        CornerRadius="4"
                                                        Padding="6,3"
                                                        HorizontalAlignment="Left">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock FontSize="10"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White"
                                                                   Margin="0,0,2,0"
                                                                   Visibility="{Binding Priority, Converter={StaticResource PriorityToVisibilityConverter}, ConverterParameter=High}"
                                                                   Text="â¬†ï¸"/>
                                                        <TextBlock FontSize="10"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White"
                                                                   Margin="0,0,2,0"
                                                                   Visibility="{Binding Priority, Converter={StaticResource PriorityToVisibilityConverter}, ConverterParameter=Medium}"
                                                                   Text="âž¡ï¸"/>
                                                        <TextBlock FontSize="10"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White"
                                                                   Margin="0,0,2,0"
                                                                   Visibility="{Binding Priority, Converter={StaticResource PriorityToVisibilityConverter}, ConverterParameter=Low}"
                                                                   Text="â¬‡ï¸"/>
                                                        <TextBlock FontSize="10"
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White"
                                                                   Text="{Binding Priority}"/>
                                                    </StackPanel>
                                                </Border>

                                            <!-- Avatar Circle -->
                                            <Border Grid.Column="1"
                                                    Width="32" Height="32"
                                                    CornerRadius="16"
                                                    Background="{StaticResource NeonPlasmaGradient}">
                                                <TextBlock Text="{Binding Initials}"
                                                           FontSize="12"
                                                           FontWeight="Bold"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>

                                        <!-- Task Title -->
                                        <TextBlock Text="{Binding Title}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,12"/>

                                            <!-- Task Footer -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Role Badge -->
                                                <Border Grid.Column="0"
                                                        Background="{Binding RoleBadgeColor}"
                                                        CornerRadius="4"
                                                        Padding="8,4"
                                                        HorizontalAlignment="Left"
                                                        Visibility="{Binding Role, Converter={StaticResource NullToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Role}"
                                                               FontSize="11"
                                                               FontWeight="Medium"
                                                               Foreground="White"/>
                                                </Border>

                                                <!-- Hours Badge -->
                                                <Border Grid.Column="1"
                                                        Background="#2C2C2E"
                                                        CornerRadius="4"
                                                        Padding="8,4">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="ClockOutline"
                                                                                 Width="12" Height="12"
                                                                                 Foreground="#98989D"
                                                                                 VerticalAlignment="Center"
                                                                                 Margin="0,0,4,0"/>
                                                        <TextBlock Text="{Binding Hours, StringFormat={}{0:F1}h}"
                                                                   FontSize="11"
                                                                   Foreground="#98989D"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- IN PROGRESS Column: No borders, floating header -->
                <StackPanel Grid.Column="2">
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="ðŸš€ IN PROGRESS" 
                                   FontSize="15" 
                                   FontWeight="Bold">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#6200EA" Offset="0"/>
                                    <GradientStop Color="#B500FF" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <Border Grid.Column="1"
                                Background="{StaticResource ObsidianGlass}"
                                BorderThickness="1"
                                BorderBrush="{StaticResource FrostedEdge}"
                                CornerRadius="12"
                                Padding="10,6"
                                MinWidth="32">
                            <TextBlock Text="{Binding InProgressTasks.Count}"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <ItemsControl ItemsSource="{Binding InProgressTasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Margin="0,0,0,12"
                                                     Padding="16"
                                                     MouseDoubleClick="TaskCard_MouseDoubleClick"
                                                     Tag="{Binding}"
                                                     Cursor="Hand">
                                    <materialDesign:Card.Style>
                                        <Style TargetType="materialDesign:Card" BasedOn="{StaticResource {x:Type materialDesign:Card}}">
                                            <Setter Property="Background" Value="{StaticResource ObsidianGlass}"/>
                                            <Setter Property="UniformCornerRadius" Value="24"/>
                                            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp0"/>
                                        </Style>
                                    </materialDesign:Card.Style>
                                        <StackPanel>
                                            <Grid Margin="0,0,0,12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Background="{Binding PriorityColor}"
                                                        CornerRadius="4"
                                                        Padding="6,3"
                                                        HorizontalAlignment="Left">
                                                    <TextBlock FontSize="10"
                                                               FontWeight="SemiBold"
                                                               Foreground="White"
                                                               Text="{Binding Priority}"/>
                                                </Border>

                                                <Border Grid.Column="1"
                                                        Width="32" Height="32"
                                                        CornerRadius="16"
                                                        Background="{StaticResource NeonPlasmaGradient}">
                                                    <TextBlock Text="{Binding Initials}"
                                                               FontSize="12"
                                                               FontWeight="Bold"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                            </Grid>

                                            <TextBlock Text="{Binding Title}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimary}"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,12"/>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Background="{Binding RoleBadgeColor}"
                                                        CornerRadius="4"
                                                        Padding="8,4"
                                                        HorizontalAlignment="Left"
                                                        Visibility="{Binding Role, Converter={StaticResource NullToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Role}"
                                                               FontSize="11"
                                                               FontWeight="Medium"
                                                               Foreground="White"/>
                                                </Border>

                                                <Border Grid.Column="1"
                                                        Background="{StaticResource ObsidianGlass}"
                                                        BorderThickness="1"
                                                        BorderBrush="{StaticResource FrostedEdge}"
                                                        CornerRadius="8"
                                                        Padding="8,4">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="ClockOutline"
                                                                                 Width="12" Height="12"
                                                                                 Foreground="{StaticResource TextSecondary}"
                                                                                 VerticalAlignment="Center"
                                                                                 Margin="0,0,4,0"/>
                                                        <TextBlock Text="{Binding Hours, StringFormat={}{0:F1}h}"
                                                                   FontSize="11"
                                                                   Foreground="{StaticResource TextSecondary}"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- DONE Column: Floating header -->
                <StackPanel Grid.Column="4">
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="âœ… DONE" 
                                   FontSize="15" 
                                   FontWeight="Bold">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#6200EA" Offset="0"/>
                                    <GradientStop Color="#B500FF" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <Border Grid.Column="1"
                                Background="{StaticResource ObsidianGlass}"
                                BorderThickness="1"
                                BorderBrush="{StaticResource FrostedEdge}"
                                CornerRadius="12"
                                Padding="10,6"
                                MinWidth="32">
                            <TextBlock Text="{Binding DoneTasks.Count}"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <ItemsControl ItemsSource="{Binding DoneTasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Margin="0,0,0,12"
                                                     Padding="16"
                                                     Opacity="0.65"
                                                     MouseDoubleClick="TaskCard_MouseDoubleClick"
                                                     Tag="{Binding}"
                                                     Cursor="Hand">
                                    <materialDesign:Card.Style>
                                        <Style TargetType="materialDesign:Card" BasedOn="{StaticResource {x:Type materialDesign:Card}}">
                                            <Setter Property="Background" Value="{StaticResource ObsidianGlass}"/>
                                            <Setter Property="UniformCornerRadius" Value="24"/>
                                            <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp0"/>
                                        </Style>
                                    </materialDesign:Card.Style>
                                        <StackPanel>
                                            <Grid Margin="0,0,0,12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Background="{Binding PriorityColor}"
                                                        CornerRadius="4"
                                                        Padding="6,3"
                                                        HorizontalAlignment="Left">
                                                    <TextBlock FontSize="10"
                                                               FontWeight="SemiBold"
                                                               Foreground="White"
                                                               Text="{Binding Priority}"/>
                                                </Border>

                                                <Border Grid.Column="1"
                                                        Width="32" Height="32"
                                                        CornerRadius="16"
                                                        Background="{StaticResource NeonPlasmaGradient}">
                                                    <TextBlock Text="{Binding Initials}"
                                                               FontSize="12"
                                                               FontWeight="Bold"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                            </Grid>

                                            <TextBlock Text="{Binding Title}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimary}"
                                                       TextWrapping="Wrap"
                                                       TextDecorations="Strikethrough"
                                                       Margin="0,0,0,12"/>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Background="{Binding RoleBadgeColor}"
                                                        CornerRadius="4"
                                                        Padding="8,4"
                                                        HorizontalAlignment="Left"
                                                        Visibility="{Binding Role, Converter={StaticResource NullToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Role}"
                                                               FontSize="11"
                                                               FontWeight="Medium"
                                                               Foreground="White"/>
                                                </Border>

                                                <Border Grid.Column="1"
                                                        Background="{StaticResource ObsidianGlass}"
                                                        BorderThickness="1"
                                                        BorderBrush="{StaticResource FrostedEdge}"
                                                        CornerRadius="8"
                                                        Padding="8,4">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="ClockOutline"
                                                                                 Width="12" Height="12"
                                                                                 Foreground="{StaticResource TextSecondary}"
                                                                                 VerticalAlignment="Center"
                                                                                 Margin="0,0,4,0"/>
                                                        <TextBlock Text="{Binding Hours, StringFormat={}{0:F1}h}"
                                                                   FontSize="11"
                                                                   Foreground="{StaticResource TextSecondary}"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
