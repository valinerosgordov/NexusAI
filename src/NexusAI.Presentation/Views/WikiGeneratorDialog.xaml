<Window x:Class="NexusAI.Presentation.Views.WikiGeneratorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Generate Knowledge Base"
        Width="600" Height="350"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    <Border Background="#1C1C1E" 
            CornerRadius="16" 
            BorderBrush="#10B981"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.7"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#0D0D0D" 
                    CornerRadius="16,16,0,0"
                    Padding="24,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="BookOpenVariant" 
                                                 Width="28" Height="28"
                                                 Foreground="#10B981"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,12,0"/>
                        <TextBlock Text="Generate Knowledge Base" 
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#F5F5F7"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Grid.Column="1"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Width="32" Height="32"
                            Click="CloseButton_Click">
                        <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Foreground="#98989D"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="24" VerticalAlignment="Center">
                <TextBlock Text="Topic" 
                           FontSize="14"
                           FontWeight="Medium"
                           Foreground="#F5F5F7"
                           Margin="0,0,0,8"/>
                <TextBlock Text="What topic should the wiki cover? AI will analyze your loaded documents and create comprehensive documentation." 
                           FontSize="12"
                           Foreground="#98989D"
                           TextWrapping="Wrap"
                           Margin="0,0,0,12"/>

                <TextBox x:Name="TopicTextBox"
                         materialDesign:HintAssist.Hint="Example: Clean Architecture in .NET, React Best Practices"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="14"
                         Foreground="#F5F5F7"
                         Padding="12"
                         Margin="0,0,0,20"/>

                <Border Background="#2C2C2E" 
                        CornerRadius="8" 
                        Padding="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="InformationOutline" 
                                                     Width="16" Height="16"
                                                     Foreground="#10B981"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,8,0"/>
                            <TextBlock Text="The AI will:" 
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#F5F5F7"/>
                        </StackPanel>
                        <TextBlock Text="• Analyze your loaded documents" 
                                   FontSize="11"
                                   Foreground="#98989D"
                                   Margin="24,0,0,4"/>
                        <TextBlock Text="• Create a hierarchical structure (3-5 main pages)" 
                                   FontSize="11"
                                   Foreground="#98989D"
                                   Margin="24,0,0,4"/>
                        <TextBlock Text="• Generate comprehensive Markdown content" 
                                   FontSize="11"
                                   Foreground="#98989D"
                                   Margin="24,0,0,4"/>
                        <TextBlock Text="• Extract specific examples from sources" 
                                   FontSize="11"
                                   Foreground="#98989D"
                                   Margin="24,0,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#0D0D0D" 
                    CornerRadius="0,0,16,16"
                    Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="CANCEL"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Height="40"
                            Padding="24,0"
                            HorizontalAlignment="Left"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Click="CancelButton_Click"/>

                    <Button Grid.Column="1"
                            FontWeight="SemiBold"
                            Height="40"
                            Padding="24,0"
                            Background="#10B981"
                            Foreground="White"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Click="GenerateButton_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Setter Property="Background" Value="#10B981"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AutoFix" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="GENERATE WIKI"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
