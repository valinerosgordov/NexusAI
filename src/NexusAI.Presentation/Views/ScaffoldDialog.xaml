<Window x:Class="NexusAI.Presentation.Views.ScaffoldDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Scaffold Project - Generate Code Structure"
        Width="700" Height="550"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    <Border Background="#1C1C1E" 
            CornerRadius="16" 
            BorderBrush="#10B981"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.7"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#0D0D0D" 
                    CornerRadius="16,16,0,0"
                    Padding="24,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CodeBraces" 
                                                 Width="28" Height="28"
                                                 Foreground="#10B981"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,12,0"/>
                        <TextBlock Text="Generate Project Scaffold" 
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#F5F5F7"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Grid.Column="1"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Width="32" Height="32"
                            Click="CloseButton_Click"
                            ToolTip="Close">
                        <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Foreground="#98989D"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24">
                    <TextBlock Text="Project Description" 
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="#F5F5F7"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Describe what you want to build (AI will generate file structure with code)" 
                               FontSize="12"
                               Foreground="#98989D"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>

                    <TextBox x:Name="DescriptionTextBox"
                             materialDesign:HintAssist.Hint="Example: A REST API for task management with ASP.NET Core and PostgreSQL"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="100"
                             FontSize="14"
                             Foreground="#F5F5F7"
                             Padding="12"
                             Margin="0,0,0,20"/>

                    <TextBlock Text="Technologies (optional)" 
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="#F5F5F7"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Comma-separated list of technologies/frameworks to use" 
                               FontSize="12"
                               Foreground="#98989D"
                               Margin="0,0,0,12"/>

                    <TextBox x:Name="TechnologiesTextBox"
                             materialDesign:HintAssist.Hint="Example: React, TypeScript, Node.js, Express, MongoDB"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             FontSize="14"
                             Foreground="#F5F5F7"
                             Padding="12"
                             Margin="0,0,0,20"/>

                    <TextBlock Text="Target Folder" 
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="#F5F5F7"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Select where to create the project files" 
                               FontSize="12"
                               Foreground="#98989D"
                               Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="TargetPathTextBox"
                                 IsReadOnly="True"
                                 materialDesign:HintAssist.Hint="Click Browse to select folder"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 FontSize="14"
                                 Foreground="#F5F5F7"
                                 Padding="12"
                                 Margin="0,0,12,0"/>
                        <Button Grid.Column="1"
                                Content="BROWSE"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Height="56"
                                Padding="20,0"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Click="BrowseButton_Click"/>
                    </Grid>

                    <Border Background="#2C2C2E" 
                            CornerRadius="8" 
                            Padding="12"
                            Margin="0,20,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="InformationOutline" 
                                                         Width="16" Height="16"
                                                         Foreground="#10B981"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>
                                <TextBlock Text="What will be generated:" 
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#F5F5F7"/>
                            </StackPanel>
                            <TextBlock Text="• Complete folder structure (src/, tests/, docs/)" 
                                       FontSize="11"
                                       Foreground="#98989D"
                                       Margin="24,0,0,4"/>
                            <TextBlock Text="• Configuration files (package.json, .csproj, etc.)" 
                                       FontSize="11"
                                       Foreground="#98989D"
                                       Margin="24,0,0,4"/>
                            <TextBlock Text="• Boilerplate code with best practices" 
                                       FontSize="11"
                                       Foreground="#98989D"
                                       Margin="24,0,0,4"/>
                            <TextBlock Text="• README.md with setup instructions" 
                                       FontSize="11"
                                       Foreground="#98989D"
                                       Margin="24,0,0,4"/>
                            <TextBlock Text="• .gitignore and environment templates" 
                                       FontSize="11"
                                       Foreground="#98989D"
                                       Margin="24,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#0D0D0D" 
                    CornerRadius="0,0,16,16"
                    Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="CANCEL"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Height="40"
                            Padding="24,0"
                            HorizontalAlignment="Left"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Click="CancelButton_Click"/>

                    <Button Grid.Column="1"
                            Content="GENERATE &amp; SCAFFOLD"
                            FontWeight="SemiBold"
                            Height="40"
                            Padding="24,0"
                            Background="#10B981"
                            Foreground="White"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Click="GenerateButton_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Setter Property="Background" Value="#10B981"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
