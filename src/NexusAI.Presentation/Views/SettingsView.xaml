<UserControl x:Class="NexusAI.Presentation.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:NexusAI.Presentation.Converters"
             mc:Ignorable="d"
             Background="#0D0D0D"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:NullToVisibilityInverseConverter x:Key="NullToVisibilityInverseConverter"/>
    </UserControl.Resources>
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32">
            <TextBlock Text="{DynamicResource S.Settings.Title}"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="#F5F5F7"/>
            <TextBlock Text="Configure your application preferences"
                       FontSize="14"
                       Foreground="#98989D"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Settings Content -->
        <StackPanel Grid.Row="1" MaxWidth="600" HorizontalAlignment="Left">
            
            <!-- Language Settings -->
            <materialDesign:Card Background="#1C1C1E"
                                 Padding="24"
                                 Margin="0,0,0,16"
                                 UniformCornerRadius="12">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="Translate"
                                                Width="24"
                                                Height="24"
                                                Foreground="#8B5CF6"
                                                VerticalAlignment="Center"
                                                Margin="0,0,12,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource S.Settings.Language}"
                                      FontSize="16"
                                      FontWeight="SemiBold"
                                      Foreground="#F5F5F7"/>
                            <TextBlock Text="{DynamicResource S.Settings.SelectLanguage}"
                                      FontSize="12"
                                      Foreground="#98989D"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <ComboBox ItemsSource="{Binding Languages}"
                              SelectedItem="{Binding SelectedLanguage}"
                              Style="{StaticResource MaterialDesignFilledComboBox}"
                              materialDesign:HintAssist.Hint="Select Language"
                              FontSize="14"
                              Foreground="#F5F5F7">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DisplayName}"
                                              FontWeight="Medium"
                                              Foreground="#F5F5F7"
                                              Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding NativeName}"
                                              Foreground="#98989D"
                                              FontSize="12"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Status Message -->
                    <TextBlock Text="{Binding StatusMessage}"
                              FontSize="13"
                              Foreground="#10B981"
                              Margin="0,12,0,0"
                              TextWrapping="Wrap"
                              Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibilityInverseConverter}}"/>

                    <!-- Loading Indicator -->
                    <ProgressBar IsIndeterminate="True"
                                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                                Margin="0,12,0,0"
                                Height="4"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Theme Settings (Placeholder) -->
            <materialDesign:Card Background="#1C1C1E"
                                 Padding="24"
                                 Margin="0,0,0,16"
                                 UniformCornerRadius="12">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="Palette"
                                                Width="24"
                                                Height="24"
                                                Foreground="#8B5CF6"
                                                VerticalAlignment="Center"
                                                Margin="0,0,12,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource S.Settings.Theme}"
                                      FontSize="16"
                                      FontWeight="SemiBold"
                                      Foreground="#F5F5F7"/>
                            <TextBlock Text="Customize application appearance"
                                      FontSize="12"
                                      Foreground="#98989D"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Theme customization coming soon..."
                              FontSize="13"
                              Foreground="#98989D"
                              FontStyle="Italic"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- AI Provider & API Keys -->
            <materialDesign:Card Background="#1C1C1E"
                                 Padding="24"
                                 Margin="0,0,0,16"
                                 UniformCornerRadius="12">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialDesign:PackIcon Kind="CloudOutline"
                                                Width="24"
                                                Height="24"
                                                Foreground="#8B5CF6"
                                                VerticalAlignment="Center"
                                                Margin="0,0,12,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource S.Header.AiProvider}"
                                      FontSize="16"
                                      FontWeight="SemiBold"
                                      Foreground="#F5F5F7"/>
                            <TextBlock Text="{DynamicResource S.Settings.ApiKeys}"
                                      FontSize="12"
                                      Foreground="#98989D"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- AI Provider ComboBox -->
                    <ComboBox ItemsSource="{Binding Source={StaticResource AiProviderValues}}"
                              SelectedItem="{Binding DataContext.SelectedAiProvider, RelativeSource={RelativeSource AncestorType=Window}}"
                              Style="{StaticResource MaterialDesignFilledComboBox}"
                              materialDesign:HintAssist.Hint="{DynamicResource S.Header.AiProvider}"
                              FontSize="14"
                              Foreground="#F5F5F7"
                              Margin="0,0,0,16"/>

                    <!-- Gemini API Key -->
                    <StackPanel Visibility="{Binding DataContext.SelectedAiProvider, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Gemini}">
                        <PasswordBox x:Name="ApiKeyBox"
                                     materialDesign:HintAssist.Hint="{DynamicResource S.Header.ApiKeyHint}"
                                     materialDesign:HintAssist.IsFloating="True"
                                     Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                     FontSize="14"
                                     Foreground="#F5F5F7"
                                     Margin="0,0,0,8"
                                     PasswordChanged="ApiKeyBox_PasswordChanged"
                                     ToolTip="{DynamicResource S.Header.ApiKeyTooltip}"/>
                    </StackPanel>

                    <!-- Ollama Settings -->
                    <StackPanel Visibility="{Binding DataContext.SelectedAiProvider, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource AiProviderToVisibilityConverter}, ConverterParameter=Ollama}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding DataContext.AvailableOllamaModels, RelativeSource={RelativeSource AncestorType=Window}}"
                                      SelectedItem="{Binding DataContext.SelectedOllamaModel, RelativeSource={RelativeSource AncestorType=Window}}"
                                      Style="{StaticResource MaterialDesignFilledComboBox}"
                                      materialDesign:HintAssist.Hint="{DynamicResource S.Header.OllamaModel}"
                                      FontSize="14"
                                      Foreground="#F5F5F7"
                                      Margin="0,0,8,0"/>
                            <Button Grid.Column="1"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Command="{Binding DataContext.LoadOllamaModelsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    ToolTip="{DynamicResource S.Header.RefreshModels}"
                                    Foreground="#8B5CF6">
                                <materialDesign:PackIcon Kind="Refresh"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

        </StackPanel>
    </Grid>
</UserControl>
