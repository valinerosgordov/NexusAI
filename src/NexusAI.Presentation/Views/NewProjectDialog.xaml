<Window x:Class="NexusAI.Presentation.Views.NewProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="New Project - AI Generation"
        Width="600" Height="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    <Border Background="#1C1C1E" 
            CornerRadius="16" 
            BorderBrush="#8B5CF6"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.7"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#0D0D0D" 
                    CornerRadius="16,16,0,0"
                    Padding="24,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Lightbulb" 
                                                 Width="28" Height="28"
                                                 Foreground="#8B5CF6"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,12,0"/>
                        <TextBlock Text="Generate Project with AI" 
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#F5F5F7"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Grid.Column="1"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Width="32" Height="32"
                            Click="CloseButton_Click"
                            ToolTip="Close">
                        <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Foreground="#98989D"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="24">
                <StackPanel>
                    <TextBlock Text="Describe your project idea" 
                               FontSize="14"
                               FontWeight="Medium"
                               Foreground="#F5F5F7"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="AI will generate a detailed plan with tasks, roles, and time estimates" 
                               FontSize="12"
                               Foreground="#98989D"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"/>

                    <TextBox x:Name="IdeaTextBox"
                             Text="{Binding ProjectIdea, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Example: Build a task management app with React frontend and .NET backend"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             MinHeight="120"
                             MaxHeight="200"
                             FontSize="14"
                             Foreground="#F5F5F7"
                             Padding="12"/>

                    <Border Background="#2C2C2E" 
                            CornerRadius="8" 
                            Padding="12"
                            Margin="0,16,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="InformationOutline" 
                                                         Width="16" Height="16"
                                                         Foreground="#8B5CF6"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>
                                <TextBlock Text="Tips for better results:" 
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#F5F5F7"/>
                            </StackPanel>
                            <TextBlock Text="• Be specific about technologies and features" 
                                       FontSize="11"
                                       Foreground="#98989D"
                                       Margin="24,0,0,4"/>
                            <TextBlock Text="• Mention target platform (web, mobile, desktop)" 
                                       FontSize="11"
                                       Foreground="#98989D"
                                       Margin="24,0,0,4"/>
                            <TextBlock Text="• Include key requirements or constraints" 
                                       FontSize="11"
                                       Foreground="#98989D"
                                       Margin="24,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#0D0D0D" 
                    CornerRadius="0,0,16,16"
                    Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="CANCEL"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Height="40"
                            Padding="24,0"
                            HorizontalAlignment="Left"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Click="CancelButton_Click"/>

                    <Button Grid.Column="1"
                            FontWeight="SemiBold"
                            Height="40"
                            Padding="24,0"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Click="GenerateButton_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#A78BFA" Offset="0"/>
                                            <GradientStop Color="#8B5CF6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=IdeaTextBox, Path=Text.Length}" Value="0">
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Magic" Width="18" Height="18" Margin="0,0,8,0"/>
                            <TextBlock Text="GENERATE PROJECT"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
